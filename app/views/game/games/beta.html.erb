<div id='beta_games_list'>
<div class='title01'>
  <%= link_to_function '', "facebox.close();", :class => "icon-active icon-active-close" %>
  <h3>测试游戏榜</h3>
</div>

<div class='formcontent'>
<table>
  <tr>
    <td>封面</td>
    <td>名称</td>
    <td>特点</td>
    <td>关注人数</td>
  </tr>
<% @games.each do |game| %>
  <tr>
    <td></td>
    <td><%= game_link game %></td>
    <td><%= game.tag_list %></td>
    <td><%= game.attentions_count %></td>
  </tr>
<% end %>
</table>
</div>

<div class="buttons s_clear">
  <table class="center" cellpadding="0"><tr><td>
    <%= will_paginate @games, :renderer => 'RemoteLinkRenderer', :remote => @remote %>
  </td></tr></table>
</div>

</div>
