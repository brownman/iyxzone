<% content_for :html_title, '修改昵称 - 17Gaming.com' %>

<% content_for :javascript_include do %>
<%= javascript_include_tag "nickname" %>
<% end %>

    <div class="welcome-box02">
      <div class="box-v2 space20">
        <div class="t s_clear"><strong class="get-pws"></strong><span></span></div>
          <div class="m rows">
            <% form_tag url_for(:controller => 'nickname', :action => 'update'), :method => :put, :onsubmit => "Iyxzone.Nickname.reset($('submit_btn'), this); return false;" do %>
              <%= hidden_field_tag 'nickname_code', params[:nickname_code] %>
              <div class="form-con" style="padding-left:40px">
                    <div class="rows s_clear">
                        <div class="f-id">&nbsp;</div>
                        <div class="f-value">
输入您的昵称
                        </div>
                    </div>
                    <div class="rows s_clear space">
                        <div class="f-id"><label for="mail">昵称：</label></div>
                        <div class="f-value">
                            <%= text_field_tag 'login', @user.login, :onblur => "Iyxzone.Nickname.validate()", :onfocus => "Iyxzone.Nickname.showRequirement();", :id => 'login_field' %>
                        </div>
                        <span class='' id='nickname_info'></span>
                    </div>
                    <div class="rows s_clear space20">
                        <div class="f-id">&nbsp;</div>
                        <div class="f-value">
                              <span class="button rows"><span><button type='submit' id='submit_btn'>重置</button>
                                </span></span>
                        </div>
                    </div>
                  </div>
                <% end %>
                     <div class="jl-cutline" style="margin:0 auto;width:95%;">&nbsp;</div>
                    <div class="foot space20 rows">
                     <p class="gray" style="margin:0 auto;width:50%;">
                    <strong>为何需要您更改昵称?</strong><br />
        由于系统升级，要求用户的昵称不同，您的昵称和他人的重复，因此需要您修改昵称；<br />
        因此对您造成的不便，我们深表歉意。
                    </p>
                    </div>
            </div>
        <div class="b"><span></span></div>
      </div>
    </div>

<%= javascript_tag "Iyxzone.Nickname.init('#{params[:nickname_code]}')" %>
