<%= javascript_include_tag "nicEdit" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <div class="canvas-status"></div>
    <h1 class="<%= @application.icon_class %>"><%= @application.name %></h1>
    <div class="box02 canvas_int space">
      <div class="app-list-box">
        <div class="app-header">
          <%= @application.name %>
        </div>
        <% form_for :application, :url => admin_application_url(@application), :html => {:method => :put} do |f| %>
          <%= f.text_field :icon_class %>
          <%= f.text_area :about, :style => "width: 98%" %>
          <%= f.submit '更新' %>
        <% end %>
      </div>
    </div>
  </div></div>
</div></div></div></div>

<% onload_javascript_tag do %>
  nicEditors.albums = <%= current_user.all_albums.map {|a| {:id => a.id, :title => a.title, :type => a.class.name.underscore}}.to_json %>;
  new nicEditor().panelInstance('application_about', {token: '<%= form_authenticity_token %>'});   
<% end %>
