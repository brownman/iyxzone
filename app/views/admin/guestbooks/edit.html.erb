<h1>Editing guestbook</h1>

<% form_for :guestbook, @guestbook, :url => admin_guestbook_path, :html=> {:method => :put} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :priority %><br />
		<%= f.text_field :priority %>
  </p>
  <p>
    <%= f.label :done_date %><br />
    <%= f.text_field :done_date %>
  </p>
  <p>
    <%= f.label :reply %><br />
    <%= f.text_field :reply %>
  </p>
  <p>
    <%= f.label :catagory %><br />
    <%= f.text_field :catagory %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', admin_guestbook_path(@guestbook) %> |
<%= link_to 'Back', admin_guestbooks_path %>
