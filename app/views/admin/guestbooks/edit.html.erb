<p class="z-h s_clear">
  <strong class="left">回复</strong>
  <%= link_to_function '', "Iyxzone.Facebox.close();", :class => "icon2-close right" %>
</p>

<div class="z-con">
  <div id='error'></div>
  <% form_remote_for :guestbook, :url => admin_guestbook_url(@guestbook), :html => {:method => :put, :onsubmit=> "Iyxzone.disableButton($('edit_guestbook_btn'),'请等待..');"} do |f| %>
  <div class='formcontent'>
    <div class="rows s_clear">
      <div class="fldid"><label for="des">问题描述：</label></div>
      <div class="fldvalue">
        <%= f.text_area 'description', :disabled => true  %>
      </div>
    </div>
    <div class="rows s_clear">
      <div class="fldid"><label for="des">回复：</label></div>
      <div class="fldvalue">
        <%= f.text_area 'reply' %>
      </div>
    </div>
  </div>
  <div class="z-submit s_clear space">
    <table class="center" cellpadding="0"><tr><td>
      <span class="button"><span><button type="submit" id='edit_guestbook_btn'>完成</button></span></span>
      <span class="button button-gray"><span><button type="button" onclick="Iyxzone.Facebox.close();">取消</button></span></span>
    </td></tr></table>
  </div>
  <% end %>
</div>
