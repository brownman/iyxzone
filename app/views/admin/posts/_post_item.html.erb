<% post = post_item %>
<div class="feed-img-list" id='post_<%= post.id %>'>
  <div class='feed-list eval-list'>
    <div class='feed-img'>
      <%= avatar post.poster, :class => 'imgbox01' %>
    </div>
    <div class='feed-header'>
      <% if post.verified == 0 %>
        <%= verify_link post %>
        <%= unverify_link post %>
      <% elsif post.verified == 1 %>
        <%= unverify_link post %>
      <% elsif post.verified == 2 %>
        <%= verify_link post %>
      <% end %>
      <h3><%= topic_link post.topic %></h3>
      <p><%= profile_link post.poster, :class => "shine"%> <%= ftime post.created_at %></p>
    </div>
    <div class='feeds'>
      <p><%= post.content %></p>
    </div>
  </div>
</div>
