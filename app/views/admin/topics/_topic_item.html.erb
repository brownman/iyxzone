<% topic = topic_item %>
<div class="feed-img-list" id='topic_<%= topic.id %>'>
  <div class='feed-list eval-list'>
    <div class='feed-img'>
      <%= avatar topic.poster, :class => 'imgbox01' %>
    </div>
    <div class='feed-header'>
      <% if topic.verified == 0 %>
        <%= verify_link topic %>
        <%= unverify_link topic %>
      <% elsif topic.verified == 1 %>
        <%= unverify_link topic %>
      <% elsif topic.verified == 2 %>
        <%= verify_link topic %>
      <% end %>
      <h3><%= topic_link topic %></h3>
      <p><%= profile_link topic.poster, :class => "shine"%> <%= ftime topic.created_at %></p>
    </div>
    <div class='feeds'>
      <p><%= topic.content_abstract %></p>
    </div>
  </div>
</div>
