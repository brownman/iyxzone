<% canvas_tag do %>
    <h1 class="home-decoration">主页装扮</h1>
    <div class="box02 canvas_int space">
      <div class="theme-list">
        <h2>装扮我的个人主页</h2>
        <ul class="s_clear">
        <% @skins.each do |skin| %>
            <li>
							<%= skin_image_tag skin %><br/>
							<strong> <%= skin.name %> </strong><br />
							<%= link_to "预览" , skin_url(skin)%>|<%= link_to "启用" , skin_url(skin), :method => :put%>
						</li>
        <% end %>
        </ul>
        <div class="round-pagination">
          <%= will_paginate @skins %>
        </div>
      </div>
    </div>
<% end %>
