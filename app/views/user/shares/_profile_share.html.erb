<% profile = share.shareable %>
<% first_sharer = profile.first_sharer %>
<% poster = sharing.poster %>
<div class="feed-list feed-share">
  <%= dig_link share %>
  <div class="feed-header">
    <div class="right">
      <%= ftime share.created_at %><br/>
      首次分享人：<%= avatar first_sharer, :with => '27px', :height => '27px' %>
			<%= profile_link first_sharer %>
    </div>
    <h3><a class='left' href='#'><%= avatar profile.user, :class => 'imgbox01' %></a><span><%= profile_link profile.user %></span></h3>
    <p class="con rows"><span class="quote">“</span><%= sharing.reason %><span class="quote">”</span></p>
    <div class="feeds">
      <%= link_to_function "评论(#{sharing.comments_count})", "Iyxzone.Comment.toggleBox('sharing', #{sharing.id}, #{sharing.comments_count})" %> | 
      <%= facebox_link "我也分享", new_sharing_url(:url => profile_url(profile)), :width => 450%><span>(<%= profile.sharings_count %>)</span> | 
      <%= link_to "更多分享", shares_url(:uid => poster.id) %>
    </div>
  </div>
  <div id="sharing_comment_box_<%= sharing.id %>" style="display: none">
    <%= render :partial => 'user/comments/comment_box', :locals => {:commentable => sharing, :recipient => poster} %>
  </div>
</div>
