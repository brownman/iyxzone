<% content_for :javascript_include do %>
  <%= javascript_include_merged :share %>
<% end %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-share">分享</h1>
    <%= render :partial => 'new_link_sharing' %>
    <div class="box02 canvas_int rows">
      <div class="tab tab01">
        <%= render :partial => 'share_button' %>
        <ul>
          <li><span><%= link_to "热门分享", hot_shares_url %></span></li>
          <li class='hover'><span><%= link_to "最新创建", recent_shares_url %></span></li>
          <li><span><%= link_to "我的分享", shares_url(:uid => current_user.id) %></span></li>
          <li><span><%= link_to "好友的分享", friends_shares_url %></span></li>
        </ul>
      </div>
      <div class="feed-box01">
        <div class="nav-link">
          <ul class="s_clear">
            <% if params[:type].to_i == 0 %>
              <li class="hover"><%= link_to "<span>全部</span>", recent_shares_url(:type => 0) %></li>
            <% else %>
              <li><%= link_to "<span>全部</span>", recent_shares_url(:type => 0) %></li>
            <% end %>
            <% if params[:type].to_i == 1 %>
              <li class="hover"><%= link_to "<span>日志</span>", recent_shares_url(:type => 1) %></li>
            <% else %>
              <li><%= link_to "<span>日志</span>", recent_shares_url(:type => 1) %></li>
            <% end %>
            <% if params[:type].to_i == 2 %>
              <li class="hover"><%= link_to "<span>视频</span>", recent_shares_url(:type => 2) %></li>
            <% else %>
              <li><%= link_to "<span>视频</span>", recent_shares_url(:type => 2) %></li>
            <% end %>
            <% if params[:type].to_i == 3 %>
              <li class="hover"><%= link_to "<span>连接</span>", recent_shares_url(:type => 3) %></li>
            <% else %>
              <li><%= link_to "<span>连接</span>", recent_shares_url(:type => 3) %></li>
            <% end %>
            <% if params[:type].to_i == 4 %>
              <li class="hover"><%= link_to "<span>照片</span>", recent_shares_url(:type => 4) %></li>
            <% else %>
              <li><%= link_to "<span>照片</span>", recent_shares_url(:type => 4) %></li>
            <% end %>
            <% if params[:type].to_i == 5 %>
              <li class="hover"><%= link_to "<span>相册</span>", recent_shares_url(:type => 5) %></li>
            <% else %>
              <li><%= link_to "<span>相册</span>", recent_shares_url(:type => 5) %></li>
            <% end %>
            <% if params[:type].to_i == 6 %>
              <li class="hover"><%= link_to "<span>投票</span>", recent_shares_url(:type => 6) %></li>
            <% else %>
              <li><%= link_to "<span>投票</span>", recent_shares_url(:type => 6) %></li>
            <% end %>
            <% if params[:type].to_i == 7 %>
              <li class="hover"><%= link_to "<span>游戏</span>", recent_shares_url(:type => 7) %></li>
            <% else %>
              <li><%= link_to "<span>游戏</span>", recent_shares_url(:type => 7) %></li>
            <% end %>
            <% if params[:type].to_i == 8 %>
              <li class="hover"><%= link_to "<span>玩家</span>", recent_shares_url(:type => 8) %></li>
            <% else %>
              <li><%= link_to "<span>玩家</span>", recent_shares_url(:type => 8) %></li>
            <% end %>
            <% if params[:type].to_i == 9 %>
              <li class="hover"><%= link_to "<span>话题</span>", recent_shares_url(:type => 9) %></li>
            <% else %>
              <li><%= link_to "<span>话题</span>", recent_shares_url(:type => 9) %></li>
            <% end %>
          </ul>
        </div>
        <div class="feed-img-list rows">
        <% if @shares.total_entries != 0 %>
          <% @shares.each do |share| %>
            <%= render :partial => "#{share.shareable_type.underscore}_share", :locals => {:share => share, :sharing => share.sharings.first, :is_mine => false} %>
          <% end %>
          <%= will_paginate @shares %>
        <% else %>
          <div class='tip'>最近大家都死了，没人分享东西</div>
        <% end %>
        </div>
      </div>
    </div>
  </div></div>
</div></div></div></div>
