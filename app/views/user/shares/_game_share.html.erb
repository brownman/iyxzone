<% game = share.shareable %>
<% first_sharer = game.first_sharer %>
<% poster = sharing.poster %>
<div class="feed-list feed-share">
  <%= dig_link share %>
  <div class="feed-header">
    <div class="right">
      <%= ftime share.created_at %><br/>
      首次分享人：<%= avatar first_sharer, :with => '27px', :height => '27px' %>
			<%= profile_link first_sharer %>
    </div>
    <h3><a href="#" class="left"><img class="imgbox01" src="images/photo/photo11.png" alt="" /></a></h3>
    <p class="con rows"><span>游戏：<%= game_link game, :popup => true%></span><span class="quote">“</span><%= sharing.reason %><span class="quote">”</span></p>
    <div class="feeds">
      <%= link_to_function "评论(#{sharing.comments_count})", "Iyxzone.Comment.toggleBox('sharing', #{sharing.id}, #{sharing.comments_count})" %> | 
      <%= facebox_link "我也分享", new_sharing_url(:shareable_type => 'Game', :shareable_id => game.id) %><span>(<%= game.sharings_count %>)</span> | 
      <%= link_to "更多分享", sharings_url(:uid => poster.id) %>
    </div>
  </div>
  <div id="sharing_comment_box_<%= sharing.id %>" style="display: none">
    <%= render :partial => 'user/comments/comment_box', :locals => {:commentable => sharing, :recipient => poster} %>
  </div>
</div>
