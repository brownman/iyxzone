<% video = share.shareable %>

<% render :layout => 'share_item', :locals => {:sharing => sharing, :share => share, :shareable => video} do %>
  <h3>视频：<%= link_to h(sharing.title), video_url(video), :popup => true %></h3>
  <div id='video_<%= video.id %>'><%= video_thumbnail video %></div>
  <%= sharing_reason sharing %>
<% end %>
