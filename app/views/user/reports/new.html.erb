<p class="z-h s_clear">
  <strong class="left">举报</strong>
  <%= link_to_function '', "facebox.close();", :class => "icon2-close right" %>
</p>

<div class="z-con">
  <div id='error'></div>
  <% form_remote_for :report, :url => reports_url, :html => {:onsubmit => "Iyxzone.disableButton($('report_submit_btn'), '请等待..');", :method => :post} do |f| %>
  <%= hidden_field_tag "reportable_type", params[:reportable_type] %>
  <%= hidden_field_tag "reportable_id", params[:reportable_id] %>
  <div class='formcontent'>
    <div class="rows s_clear">
      <div class="fldid"><label for="des">描述:</label>
			<span id= "description_error_msg"> </span>
		</div>
      <div class="fldvalue">
        <%= f.text_area 'content'  %>
      </div>
    </div>
    <div class="rows s_clear">
      <div class="fldid"><label for="des">分类:</label></div>
      <div class="fldvalue">
        <%= collection_select :report, :category , Report::CATEGORY, 'to_s', "to_s", {:prompt => '---'} %>
      </div>
    </div>
  </div>
  <div class="z-submit s_clear space">
    <table class="center" cellpadding="0"><tr><td>
      <span class="button"><span><button type="submit">提交</button></span></span>
      <span class="button"><span><button type="reset" onclick="facebox.close()">取消</button></span></span>
    </td></tr></table>
  </div>
  <% end %>
</div>
