<% mini_blog = comment.commentable %>

<% if home_page %>
  <% link = link_to_function "微博", "Iyxzone.Home.NoticeManager.read(#{notice.id}, '#{form_authenticity_token}'); window.open('/mini_blogs?bid=#{mini_blog.id}&reply_to=#{comment.poster_id}&uid=#{mini_blog.poster_id}');" %>
<% else %>
  <% link = link_to_function "微博", "window.open('/mini_blogs?bid=#{mini_blog.id}&reply_to=#{comment.poster_id}&uid=#{mini_blog.poster_id}');" %>
<% end %>

<li>
	<div class="feed-message">
    <% if home_page %>
		<%= link_to_function '', "Iyxzone.Home.NoticeManager.readSingle(#{notice.id}, '#{form_authenticity_token}')", :class => 'icon-active' %>
    <% end %>
		<% if notice.data == 'comment' %>
			<%= profile_link comment.poster %> 评论了你的 <%= link %>
		<% elsif notice.data == 'reply' %>
			<%= profile_link comment.poster %> 在 <%= link %> 回复了你
		<% end %> 		
	</div>
</li>
