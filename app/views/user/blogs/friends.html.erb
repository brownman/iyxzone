<% content_for :html_title, "#{current_user.login} - 好友日志 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login}的好友日志 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<% canvas_tag do %>
  <h1 class="app-log">日志</h1>
  <div class="box02 canvas_int space">
    <%= render :partial => 'tab', :locals => {:user => current_user, :hover => 3} %>
    <div class="feed-box01">
      <% if @blogs.total_entries != 0 %>
        <div class="gray">共<%= @blogs.total_entries %>篇</div>
        <%= render :partial => 'blog_item2', :collection => @blogs %>
        <%= will_paginate @blogs %>
      <% else %>
        <div class='tip'>你的朋友都懒的跟什么似的，没人写</div>
      <% end %>
    </div>
  </div>
<% end %>
