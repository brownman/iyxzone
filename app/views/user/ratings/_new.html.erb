<% rateable_type = rateable.class.name %>
<div id='<%= rateable_type.underscore %>_<%= rateable.id %>_rating_form'>
<% form_remote_for :rating, :url => ratings_url(:rateable_id => rateable.id, :rateable_type => rateable_type), :loading => "Iyxzone.changeCursor('wait');", :complete => "Iyxzone.changeCursor('default');" do |f| %>
  <%= hidden_field_tag 'rating[rateable_type]', rateable_type %>
  <%= hidden_field_tag 'rating[rateable_id]', rateable.id %> 
  <%= hidden_field_tag 'rating[rating]', Rating::Default, :id => "#{rateable_type.underscore}_#{rateable.id}_rating"%>
  <div class="star-ratings-block s_clear">
  <% Rating::Default.times do |i| %>
    <%= link_to_function '', "Iyxzone.Rating.set(#{i + 1}, #{rateable.id}, '#{rateable_type.underscore}', this)", :class => 'lit'%>
  <% end %>
  <% (Rating::Maximum - Rating::Default).times do |i| %>
    <%= link_to_function '', "Iyxzone.Rating.set(#{Rating::Default + i + 1}, #{rateable.id}, '#{rateable_type.underscore}', this)"%>
  <% end %>
  </div>
  <%= f.submit '提交' %>
<% end %>
</div>
