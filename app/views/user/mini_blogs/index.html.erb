<% content_for :javascript_include do %>
  <%= javascript_include_tag 'mini_blog' %>
<% end %>

<% canvas_tag do %>
  <h1 class="app-status">微博</h1>
  <div class="box02 canvas_int">
    <%= render :partial => 'tab', :locals => {:user => @user, :hover => 1} %>
    <div class="mainConWrap clear">
      <div class="mBlog fix">
        <div class="mBlogMain">
          <div class="mBlogMainWrap">
            <% if @user == current_user %>
              <%= render :partial => 'form_at_index', :locals => {:at => 'mini_blogs_index'} %>
            <% end %>
            <div class="mBlogCatTab fix">
              <strong class="title"><%= get_subject @user %>的微博</strong>
              <%= link_to_function "全部", "Iyxzone.MiniBlog.MyIndex.fetch('all', #{@user.id});", :id => 'mini_blog_category_all', :class => 'selected' %>
              <span class="pipe">|</span>
              <%= link_to_function "原创", "Iyxzone.MiniBlog.MyIndex.fetch('original', #{@user.id});", :id => 'mini_blog_category_original' %>
              <span class="pipe">|</span>
              <%= link_to_function "文字", "Iyxzone.MiniBlog.MyIndex.fetch('text', #{@user.id});", :id => 'mini_blog_category_text' %>
              <span class="pipe">|</span>
              <%= link_to_function "图片", "Iyxzone.MiniBlog.MyIndex.fetch('image', #{@user.id});", :id => 'mini_blog_category_image' %>
              <span class="pipe">|</span>
              <%= link_to_function "视频", "Iyxzone.MiniBlog.MyIndex.fetch('video', #{@user.id});", :id => 'mini_blog_category_video' %>
            </div>
            <div class="mBlogPostList" id='mini_blogs_list'>
              <%= render :partial => 'personal_mini_blogs', :locals => {:mini_blogs => @mini_blogs} %>
            </div>
          </div>
        </div>
        <div class="mBlogExtra">
          <% if @user == current_user %>
            <%= render :partial => 'hot_idols', :locals => {:idols => @hot_idols} %>
          <% elsif !@interested_idols.blank? %>
            <%= render :partial => 'interested_idols', :locals => {:idols => @interested_idols, :user => @user} %>
          <% end %>
          <%= render :partial => 'hot_topics', :locals => {:topics => @hot_topics} %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= javascript_tag "Iyxzone.MiniBlog.MyIndex.init('all');" %>
