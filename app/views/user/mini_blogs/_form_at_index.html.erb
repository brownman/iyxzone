            <div class="mBlogTopic mBlogMyTopic">
              <div class="topTitle fix">
                <%= link_to "领取狼队封测激活>>>", wolves_promotions_url, :class => "entrance" %>
              </div>
              <div class="round08 round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b"><div class="round_m"><div class="round_body">
                <div class="topBg fix">
                  <div class="mBlogEditor">
                    <div class="bd fix">
                      <textarea name="" id="mini_blog_text_area" onfocus="Iyxzone.limitText($(this), 140, Iyxzone.MiniBlog.Builder.checkTextLength);" onblur="Iyxzone.cancelLimitText($(this));"></textarea>
                    </div>
                    <div class="ft fix">
                      <ul>
                        <li id='publisher_emotion'>
                          <%= link_to_function '<span class="i iFace"></span>表情', "Iyxzone.Emotion.Manager.toggleFaces(this, $('mini_blog_text_area'), event)" %>
                        </li>
                        <li id='publisher_image'>
                          <%= link_to_function '<span class="i iPic"></span>图片</a>', "Iyxzone.MiniBlog.Builder.newImage()" %>
                          <span class="picUpload">
                            <% form_for :mini_image, :url => mini_images_url, :html => {:id => "publisher_image_form", :multipart => true, :target => 'upload_frame'} do |f| %>
                              <%= f.file_field :uploaded_data, :onchange => "Iyxzone.MiniBlog.Builder.imageSelected();" %>
                            <% end %>
                            <iframe id='upload_frame' name='upload_frame' style='width:1px;height:1px;border:0px' src="about:blank"></iframe>
                          </span>
                        </li>
                        <li id='publisher_video'><%= link_to_function '<span class="i iVideo"></span>视频</a>', "Iyxzone.MiniBlog.Builder.newVideo()" %></li>
                        <li id='publisher_topic'><%= link_to_function '<span class="i iTopic"></span>话题</a>', "Iyxzone.MiniBlog.Builder.newTopic()" %></li>
                      </ul>
											<div class="submit fix">
											<span class="count">你还可以输入<span class="num" id="mini_blog_words_count">140</span>字</span>
                      <span class="button03"><span><%= button_to_function "发布", "Iyxzone.MiniBlog.Builder.publish('#{at}');", {:id => 'publish_btn'} %></span></span>
											</div>
                    </div>
                  </div>
                </div>
              </div></div></div></div></div></div>
            </div>

<% javascript_tag do %>
  Iyxzone.MiniBlog.Builder.init();
<% end %>
