<div class="detail-blog">
  <div class="detail-blog-head jl-cutline s_clear">
    <p class="left">
      <strong><%=news.title%></strong> <span class="gray"><%= ftime news.created_at %><strong>类型：</strong>文字新闻</span>
    </p>
    <p class="right">
      <%= facebox_link "分享", new_sharing_url(:url => news_url(news)), :width => 450, :class => 'share-btn' %>
    </p>
  </div>
  <div class="con">
    <%= news.data %>
  </div>
  <div class="detail-blog-foot s_clear">
    <h2 class="gray">相关游戏：<%= game_link news.game %></h2>
    <% if !news.origin_address.nil? %>
      <h2 class="gray">本帖转自：<%= link_to news.origin_address, news.origin_address %></h2>
    <% end %>
    <div class="foot cmt-space feed-list">
      <p class="jl-cutline"></p>
      <p class="red">
        <span class="red w-l">评论(<%= news.comments_count %>)</span>
        <span class="w-l">|</span>
        <span class="red w-l">浏览(<%= news.viewings_count %>)</span>
        <span class="w-l">|</span>
        <span class="photo-op-praise"><%= text_dig_link news %></span>
        <span class="icon-heart"></span>
        <%= facebox_link "分享", new_sharing_url(:url => news_url(news)), :width => 450 %><span class="w-l">(<%=news.sharings_count%>)</span>
      </p>
      <%= render :partial => 'user/comments/comment_box', :locals => { :commentable => news, :recipient => nil} %>
    </div>
    <div class="prompt-list-box">
      <h5>随便看看</h5>
      <div class="list-box box04">
        <ul class="lister02">
          <li><a href="#">llllllllllllllllllllllll</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
