<% content_for :javascript_include do %>
  <%= javascript_include_merged :photo %>
<% end %>

<% content_for :html_title, "拾闻 - 17Gaming.com" %>
<% content_for :html_description, "拾闻 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>
<% @picture = @news.pictures.first %>
<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-news">拾闻</h1>
    <div class="box02 canvas_int space">
      <div class="tab tab01">
        <ul>
          <li><span><%= link_to "拾闻", news_index_url(:type => 0) %></a></span></li>
          <li><span><%= link_to "文字新闻", news_url(:type => 1)%></span></li>
          <li><span><%= link_to "视频新闻", news_url(:type => 2) %></span></li>
          <li><span><%= link_to "图片新闻", news_url(:type => 3) %></span></li>
        </ul>       
      </div>
      <div class="pic-box">
        <div class="img-container-main s_clear">
          <div class="img-container-wrap">
            <div class="img-container">
              <div class="path-box">
                <label>
                  <%= link_to "图片新闻", news_index_url(:type => 3) %>
                </label>
                <span><%= @news.title %></span>
              </div>
              <div class="img-main">
                <div class="imgwrap box05">
                  <div class="photo-op">
										<span class="photo-op-share" ></span>
										<%= facebox_link "分享", new_sharing_url(:url => news_url(@news)), :width => 450 %> |
										<span class="photo-op-praise" ></span>
                    <%= text_dig_link @news %>
									</div>
                  <p id='picture'><%= resize_image @picture %></p>
									<div class="pic-desc s_clear">
										<h4 class="box06" id='notation'>
                      <%= simple_format h @picture.notation %>
										</h4>
										<div class="rows"></div> 
									</div>
								</div>
							</div>
						</div>
					</div>
          <div class="album">
            <span class="num">一共<%= @news.pictures.count %>张</span>
            <div class="btn upbtn" id="up_btn"></div>
            <div class="small-imgs">
              <div class="imgList" id='frames'>
                <% 7.times do |i| %>
                  <div class="img"></div>
                <% end %>
              </div>
            </div>
            <div class="btn downbtn" id="down_btn"></div>
            <% photo_infos = @news.pictures.map {|p| {:id => p.id, :url => p.public_filename, :thumbnail_url => p.public_filename(:medium), :notation => p.notation}}.to_json %> 
            <%= onload_javascript_tag "
              slide = new Iyxzone.Photo.Slide3(#{@picture.id}, #{photo_infos}, $('frames').childElements(), $('down_btn'), $('up_btn'));
            "%>
          </div>
        </div>
      </div>
      <div class="page-foot s_clear">
        <div class="foot-func">
          <span class="w-l red">评论(<%= @news.comments_count %>)</span><span class="w-l">|</span>
          <span class="w-l red">浏览(<%= @news.viewings_count %>)</span><span class="w-l">|</span>
          <span class="photo-op-praise" ></span><%= text_dig_link @news, :class => 'red' %>
        </div>
        <div class='s_clear rows'>
          <div class="feed-list">
            <%= render :partial => 'user/comments/comment_box', :locals => {:commentable => @news, :recipient => nil} %>
          </div>
          <% unless @random_news.blank? %>
          <div class="prompt-list-box">
            <h5>随便看看</h5>
            <div class="list-box box04">
              <ul class="lister02">
                <% @random_news.each do |news| %>
                  <li><%= news_link news %></li>
                <% end %>
              </ul>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div></div>
</div></div></div></div>

<% unless @reply_to.blank? %>
<%= onload_javascript_tag "Iyxzone.Comment.set('news', #{@news.id}, '#{@reply_to.login}', #{@reply_to.id});" %>
<% end %>
