      <% fields_for "profile[new_characters][new_#{params[:id]}]", @character do |c| %>
        <div id='character_<%= @character.id %>'>
          <div class="rows s_clear">
            <div class="fldid"><label>名字：</label></div>
            <div class="fldvalue">
              <div class="textfield"><%= c.text_field :name %></div>
            </div>
          </div>
          <div class="rows s_clear">
            <div class="fldid"><label>等级：</label></div>
            <div class="fldvalue">
              <div class="textfield"><%= c.text_field :level %></div>
            </div>
          </div>
          <div class="rows s_clear">
            <div class="fldid"><label>游戏：</label></div>
            <div class="fldvalue">
              <div><%= c.collection_select :game_id, @games, :id, :name, {:prompt => '---'} %></div>
            </div>
          </div>
          <div class="rows s_clear">
            <div class="fldid"><label>服务区：</label></div>
            <div class="fldvalue">
              <div><%= c.collection_select :area_id, [], :id, :name, {:prompt => '---'} %></div>
            </div>
          </div>
          <div class="rows s_clear">
            <div class="fldid"><label>服务器：</label></div>
            <div class="fldvalue">
              <div><%= c.collection_select :server_id, [], :id, :name, {:prompt => '---'} %></div>
            </div>
          </div>
          <div class="rows s_clear">
            <div class="fldid"><label>种族：</label></div>
            <div class="fldvalue">
              <div><%= c.collection_select :race_id, [], :id, :name, {:prompt => '---'} %></div>
            </div>
          </div>
          <div class="rows s_clear">
            <div class="fldid"><label>职业：</label></div>
            <div class="fldvalue">
              <div><%= c.collection_select :profession_id, [], :id, :name, {:prompt => '---'} %></div>
            </div>
          </div>
          <p class="foot s_clear"><%= link_to_function '删除角色', "Iyxzone.Profile.Editor.removeNewCharacter(this);", :class => 'right red' %></p>
        </div>
      <% end %>

<%= javascript_tag "
  new Iyxzone.Game.PinyinSelector(#{array_or_string_for_javascript @games.map(&:pinyin).insert(0, '---')}, 'profile_new_characters_new_#{params[:id]}_game_id', 'profile_new_characters_new_#{params[:id]}_area_id', 'profile_new_characters_new_#{params[:id]}_server_id', 'profile_new_characters_new_#{params[:id]}_race_id', 'profile_new_characters_new_#{params[:id]}_profession_id', {});
" %>
