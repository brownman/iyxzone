<% content_for :html_title, "#{@user.login}的相关照片 - 17Gaming.com" %>
<% content_for :html_description, "#{@user.login}的相关照片 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <% if @user == current_user %>
    <h1 class="app-photo">照片</h1>
    <% else %>
    <div class="friend-head space s_clear">
      <span class="left"><%= avatar @user, :class => "imgbox01"%></span>
      <p class="left">
        <strong><%= @user.login %>的照片</strong><br />
        <%= link_to '个人主页', profile_url(@user.profile), :class=>'red'%>
      </p>
    </div>
    <% end %>
    <div class='box02 canvas_int'>
      <div class="tab tab01">
        <% if @user == current_user %>
        <div class="right">
          <%= link_to "上传照片", select_personal_albums_url(:uid => @user.id) %>
          <%= link_to "新建相册", new_personal_album_url, :rel => 'facebox' %>
        </div>
        <% end %>
        <ul>
          <% subject = get_subject @user %>
          <li><span><%= link_to "热门照片", hot_personal_photos_url %></span></li>
          <li><span><%= link_to "#{subject}的相册", personal_albums_url(:uid => @user.id) %></span></li>
          <li class='hover'><span><%= link_to "圈了#{subject}的照片", relative_personal_photos_url(:uid => @user.id) %></span></li>
          <% if @user == current_user %>
            <li><span><%= link_to '好友相册', friends_personal_albums_url(:uid => @user.id) %></span></li>
          <% end %>
        </ul>       
      </div>
      <div class="pic-box">
        <div class="path-box">
          <p><span>共 <%= @infos.total_entries %> 张照片</span></p>
        </div>
        <table class="photo-edit-list photo-mark-list">
          <% i = 0 %>
          <% @infos.each do |info| %>
            <% photo = info[:photo] %>
            <% if i == 0 %><tr><% end %>
            <td valign="bottom">
              <%= photo_link photo, :class => 'imgbox02' %><br />
              <%= info[:posters].map{|p| profile_link(p, :class => 'red')}.join(',') %> <span class='gray'>标记</span>
            </td>
            <% i = i + 1 %>
            <% if i == 4 %>
              </tr><% i =0 %>
            <% end %>
          <% end %>
        </table>
        <%= will_paginate @infos %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
