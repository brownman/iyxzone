<% content_for :html_title, "#{current_user.login}的照片编辑 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login}的照片编辑 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-photo">照片</h1>
    <div class="box02 canvas_int space">
      <%= render :partial => 'user/albums/tab', :locals => {:user => current_user, :hover => 1} %>
      <div class="photo-box">
        <% form_tag update_multiple_personal_photos_url(:album_id => @album.id, :format => 'html'), :method => :put, :onsubmit => "Iyxzone.disableButton($('edit_multiple_photos_btn'), '正在保存..');" do %>
        <% @photos.each do |p| %>
        <% fields_for 'photos[]', p do |f| %>        
        <div class="photo-list box04 s_clear">
          <div class="form-wrap">
            <div class="formcontent">
              <div class="rows s_clear">
                <div class="fldid"><label for="desc1">描述：</label></div>
                <div class="fldvalue"><%= f.text_area :notation %></div>
              </div>
              <div class="rows s_clear">
                <div class="fldid">封面：</div>
                <div class="fldrd"><%= radio_button_tag 'cover_id', p.id, false %></div>
                <div class="fldrdvalue"><label for="r1">设为相册封面</label></div>
              </div>
            </div>
          </div>
          <div class="img">
            <p><%= image_tag p.public_filename(:large), :class => 'imgbox01', :width => '76px', :height => '85px' %></p>
          </div>
        </div>
      <% end %>
      <% end %>
        <div class="buttons s_clear">
          <table class="center" cellpadding="0">
            <tr><td>
              <span class="button"><span><button type="submit" id="edit_multiple_photos_btn">保存修改</button></span></span>
            </td></tr>
          </table>
        </div>
      <% end %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
