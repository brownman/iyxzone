<% content_for :html_title, "#{current_user.login} - 热门照片 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login} - 热门照片 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<% canvas_tag do %>
  <h1 class="app-photo">照片</h1>
	<div class="box02 canvas_int">
    <%= render :partial => 'user/albums/tab', :locals => {:user => current_user, :hover => 0} %>
    <div class='piclist-rows'>
      <div class="nav-link">
        <ul class="s_clear">
          <li class='hover'><%= link_to "<span>人气最高</span>", hot_personal_photos_url %></li>
          <li><%= link_to "<span>最新上传</span>", recent_personal_albums_url %></li>
        </ul>
      </div>
      <% if @photos.blank? %>
        <div class='tip'>没人上传图片阿，你赶紧上传吧</div>
      <% else %>
        <table class="big" cellpadding="0" cellspacing="1">
          <% @photos.each do |photo| %>
            <%= render :partial => 'photo_item', :locals => {:photo => photo} %>
          <% end %>
        </table>
        <%= will_paginate @photos %>
      <% end %>
    </div>
  </div>
<% end %>
