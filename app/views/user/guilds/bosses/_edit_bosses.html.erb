<div class="boss_rule_rows">
<% form_for @guild, :html => {:id => 'boss_form'} do |f| %>
		<% f.fields_for :bosses do |gr| %>
			<div id="boss_rows">
				<%= gr.text_field 'name' -%>
				<%= gr.text_field 'reward' -%>
				<% unless gr.object.new_record? %>
					<%= gr.check_box '_delete' %>
				  <%= gr.label '_delete', '删除' %>
				<% end %>
			</div>
		<% end %>
  <%= button_to_function '保存', "Iyxzone.GuildRule.Editor.updateBossRule(#{@guild.id}, this, #{@guild.bosses.size})" %>
  <%= link_to_function "取消", "Iyxzone.GuildRule.Editor.cancelEditBossRule()" %>
<% end %>
</div>
