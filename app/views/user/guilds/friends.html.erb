<% content_for :html_title, "#{current_user.login} - 好友的公会 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login} - 好友的公会 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>


<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-cons">公会</h1>
    <div class="box02 canvas_int space">
	    <div class="tab tab01">
        <div class="icon">
          <%= link_to "新建公会", new_guild_url, :class => "icon-add-table" %>
        </div>
		    <ul>
			    <li><span><%= link_to "热门公会", hot_guilds_url %></span></li>
			    <li><span><%= link_to "我的公会", guilds_url(:uid => current_user.id) %></span></li>
			    <li class='hover'><span><%= link_to "好友公会", friends_guilds_url %></span></li>
		    </ul>
      </div>
	    <div class="piclist-rows">
        <% if @guilds.total_entries != 0 %>
          <table cellpadding="0" cellspacing="0">
            <%= render :partial => 'user/guilds/guild_item', :collection => @guilds %>
          </table>
          <%= will_paginate @guilds %>
        <% else %>
          <div class='tip'>你好友最近都死光了，报告完毕</div>
        <% end %> 
      </div>
    </div>
  </div></div>
</div></div></div></div>
