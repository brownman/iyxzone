<div class="edit-toggle space edit">
  <h3 class="s_clear"><strong class="left">出勤规则</strong><%= link_to_function "取消", "Iyxzone.Guild.Editor.cancelEditAttendanceRules(#{@guild.id})", :class => "right" %></h3>
  <div class="formcontent con con2">
    <% form_for :guild, :html => {:id => 'attendance_rules_form'} do |f| %>
      <% @guild.attendance_rules.each do |rule| %>
      <% fields_for "guild[existing_rules][]", rule do |r| %>
      <div class="item space">
        <div class="rows s_clear">
          <div class="fldid"><label><%= rule.reason %>：</label></div>
          <div class="fldvalue">
            <div class="textfield left w-l"><%= r.text_field :outcome %></div>
          </div>
        </div>
      </div>
      <% end %>
      <% end %> 
      <div class="rows s_clear space">
        <div class="fldid">&nbsp;</div>
        <div class="fldvalue">
          <span class="button"><span>
            <%= button_to_function '完成', "Iyxzone.Guild.Editor.updateAttendanceRules(#{@guild.id}, event)" %>
          </span></span>
          <span class="button button-gray"><span>
            <%= button_to_function '取消', "Iyxzone.Guild.Editor.cancelEditAttendanceRules(#{@guild.id})" %>             
          </span></span>
        </div>
      </div>
    <% end %>
  </div>
</div>

