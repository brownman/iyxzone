<h3>编辑出清规则</h3>

<% form_for :guild, :html => {:id => 'attendance_rules_form'} do |f| %>
<div id='attendance_rules'>
<% @guild.attendance_rules.each do |rule| %>
  <% fields_for "guild[existing_rules][]", rule do |r| %>
    <div><label>原因: </label></div>
    <div><%= rule.reason %></div>
    <div><label>赏罚: </label></div>
    <div><%= r.text_field :outcome %></div>
  <% end %>
<% end %>
</div>
<%= button_to_function '完成', "Iyxzone.Guild.Editor.updateAttendanceRules(#{@guild.id})" %>
<%= button_to_function '取消', "Iyxzone.Guild.Editor.cancelEditAttendanceRules(#{@guild.id})" %>
<% end %>
