<div class="edit-toggle space edit">
  <h3 class="s_clear"><strong class="left">其他规则</strong><%= link_to_function "取消", "Iyxzone.Guild.Editor.cancelEditBasicRules(#{@guild.id})", :class => 'right' %></h3>
  <div class="formcontent con con2">
    <% form_for :guild, :html => {:id => 'basic_rules_form'} do |f| %>
      <div class="item space" id='basic_rules'>
        <% @guild.basic_rules.each do |rule| %>
        <% fields_for "guild[existing_rules][]", rule do |r| %>
        <div class="rows s_clear" id='rule_<%= rule.id %>'>
          <div class="fldid"><label>原因：</label></div>
          <div class="fldvalue">
            <div class="textfield left w-l"><%= r.text_field :reason %></div>
            <div class="textfield left" style="width:50px"><%= r.text_field :outcome %></div>
            <span class="left"><%= link_to_function '', "Iyxzone.Guild.Editor.removeBasicRule(#{rule.id}, #{@guild.id}, '#{form_authenticity_token}')", :class => "icon-active icon-active-del", :href => '#' %></span>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
      <p class="foot s_clear">&nbsp;</p>
      <p class="foot s_clear"><%= link_to_function '增加新的规则', "Iyxzone.Guild.Editor.newBasicRule(#{@guild.id});", :class => "left red" %></p>
      <div class="rows s_clear space">
        <div class="fldid">&nbsp;</div>
        <div class="fldvalue">
          <span class="button"><span>
            <%= button_to_function '完成', "Iyxzone.Guild.Editor.updateBasicRules(#{@guild.id}, event)" %>
          </span></span>
          <span class="button button-gray"><span>
            <%= button_to_function '取消', "Iyxzone.Guild.Editor.cancelEditBasicRules(#{@guild.id})" %>             
          </span></span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
