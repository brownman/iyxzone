<% content_for :javascript_include do %>
  <%= javascript_include_tag 'guild' %>
<% end %>

<% content_for :html_title, "#{current_user.login} - 新建公会 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login} - 新建公会 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-cons">公会</h1>
    <div class="box02 canvas_int space">
      <div class="tab tab01">
        <div class="icon">
          <%= link_to "新建公会", new_guild_url, :class => "icon-add-table" %>
        </div>
        <ul>
          <li><span><%= link_to "热门公会", hot_guilds_url(:uid => current_user.id) %></span></li>
          <li><span><%= link_to "我的公会", guilds_url(:uid => current_user.id) %></span></li>
          <li><span><%= link_to "好友公会", friends_guilds_url %></span></li>
        </ul>
      </div>
      <div class="appcontent01">
        <h3>新建公会</h3>
        <%= error_messages_for :guild, :header_message => '以下原因导致没法保存', :message => nil %>
        <div class="cons-form formcontent">
          <% form_for @guild, :html => {:onsubmit => "Iyxzone.Guild.Builder.save(this, $('submit_btn')); return false;"} do |f| %>  
            <div class="rows s_clear">
              <div class="fldid"><label for="name">公会名字：</label></div>
              <div class="fldvalue">
                <div class="textfield"><%= f.text_field :name %></div>
              </div>
            </div>
            <div class="rows s_clear">
              <div class="fldid"><label for="name">会长游戏角色：</label></div>
              <div class="fldvalue">
                <%= collection_select :guild, :character_id, current_user.characters, :id, :name, {:prompt => '---'} %>
              </div>
            </div>
            <div class="rows s_clear">
              <div class="fldid"><label for="name">公会描述：</label></div>
              <div class="fldvalue">
                <%= f.text_area :description %>
              </div>
            </div>
            <div class="rows s_clear">
              <div class="fldid">&nbsp;</div>
              <div class="fldvalue">
                <span class="button"><span><button type='submit' id='submit_btn'>提交</button></span></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div></div>
</div></div></div></div>
