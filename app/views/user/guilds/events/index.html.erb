<% content_for :html_title, "#{@guild.name}的活动 - 17Gaming.com" %>
<% content_for :html_description, "#{@guild.name}的活动 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@guild.name}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <%= render :partial => 'user/guilds/guild_header', :locals => {:text => "#{@guild.name}的活动"} %>
    <div class="box02 canvas_int space">
	    <div class="tab tab01">
        <div class="icon">
          <%= link_to "新建活动", new_event_url, :class => 'icon-add-table' %>
        </div>
		    <ul>
			    <li><span><%= link_to "热门活动", hot_events_url %></span></li>
			    <li class='hover'><span><%= link_to "公会#{truncate h(@guild.name), :length => 20, :omission => '..'}的活动", guild_events_url(@guild) %></span></li>
		    </ul>
      </div>
      <div class="piclist-rows" id='events'>
        <% if @events.count != 0 %>
          <table cellpadding="0" cellspacing="0">
            <%= render :partial => 'user/events/event_item', :collection => @events %>
          </table>
          <%= will_paginate @events %>
        <% else %>
          <div class='tip'>该公会还没有相关活动</div>
        <% end %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
