<p class="z-h s_clear">
  <strong class="left">请求加入</strong>
  <%= link_to_function '', "facebox.close();", :class => "icon2-close right" %>
</p>

<div id='error'></div>
<div class='z-con'>
<% if @characters.blank? %>
  你没有游戏角色可以加入这个工会
<% else %>
<% form_remote_for :request, :url => guild_requests_url(@guild, :show => params[:show]), :html => {:method => :post, :onsubmit=> "Iyxzone.disableButton($(new_request_guild_btn),'请等待..');"} do |f| %>
<div class='content'>
  <%= collection_select :request, :character_id, @characters, :id, :name, {:prompt => '---'} %>
</div>
<div class="z-submit s_clear space">
  <table class="center" cellpadding="0"><tr><td>
    <span class="button"><span><button type="submit" id="new_request_guild_btn">完成</button></span></span>
    <span class="button button-gray"><span><button type="button" onclick="facebox.close();">取消</button></span></span>
  </td></tr></table>
</div>
<% end %>
<% end %>
</div>
