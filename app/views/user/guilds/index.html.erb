<% content_for :html_title, "#{@user.login} - 个人公会 - 17Gaming.com" %>
<% content_for :html_description, "#{@user.login} - 个人公会 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-cons">公会</h1>
    <div class="box02 canvas_int">
	    <div class="tab tab01">
        <div class="icon">
          <%= link_to "新建工会", new_guild_url, :class => "icon-add-table" %>
        </div>
		  <% subject = get_subject @user %>
		    <ul>
			    <li><span><%= link_to "热门工会", hot_guilds_url %></span></li>
			    <li class='hover'><span><%= link_to "#{subject}的工会", guilds_url(:id => @user.id) %></span></li>
			    <li><span><%= link_to "好友工会", friends_guilds_url %></span></li>
		    </ul>
      </div>
	    <div class="piclist-rows">
        <div class='nav-link'>
          <ul class='s_clear'>
            <li class='hover'><%= link_to "<span>#{subject}发起的(#{@user.guilds_count})</span>", guilds_url(:uid => @user.id) %></li>
            <li><%= link_to "<span>#{subject}参加的(#{@user.participated_guilds_count})</span>", participated_guilds_url(:uid => @user.id) %></li>
          </ul>
        </div>
        <% if @guilds.total_entries != 0 %>
		      <%= render :partial => 'user/guilds/guild_items', :object => @guilds %>
        <% elsif @user == current_user %>
          <div class='gray'>你还没创建任何工会，赶紧<%= link_to "创建一个", new_guild_url %>吧</div>
        <% else %>
          <div class='gray'><%= subject %>是个懒虫</div>
        <% end %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
