<% content_for :html_title, "#{@user.login} - 个人公会 - 17Gaming.com" %>
<% content_for :html_description, "#{@user.login} - 个人公会 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
	<% if @user==current_user %>
    <h1 class="app-cons">公会</h1>
	<% else %>
    <div class="friend-head space s_clear">
      <span class="left"><%= avatar @user, :class=>"imgbox01"%></span>
      <p class="left">
        <strong><%= @user.login %>的公会</strong><br />
        <%= link_to '个人主页', profile_url(@user.profile), :class=>'red'%>
      </p>
    </div>
	<% end %>
    <div class="box02 canvas_int space">
	    <div class="tab tab01">
        <div class="right">
					<%= application_link %>
          <%= link_to "新建公会", new_guild_url %>
        </div>
		  <% subject = get_subject @user %>
		    <ul>
			    <li><span><%= link_to "热门公会", hot_guilds_url %></span></li>
			    <li class='hover'><span><%= link_to "#{subject}的公会", guilds_url(:uid => @user.id) %></span></li>
			    <li><span><%= link_to "好友公会", friends_guilds_url %></span></li>
		    </ul>
      </div>
	    <div class="piclist-rows">
        <div class='nav-link'>
          <ul class='s_clear'>
            <li class='hover'><%= link_to "<span>#{subject}发起的(#{@user.guilds_count})</span>", guilds_url(:uid => @user.id) %></li>
            <li><%= link_to "<span>#{subject}参加的(#{@user.participated_guilds_count})</span>", participated_guilds_url(:uid => @user.id) %></li>
          </ul>
        </div>
        <% if @guilds.total_entries != 0 %>
          <table cellpadding="0" cellspacing="0">
		        <%= render :partial => 'user/guilds/guild_item', :collection => @guilds %>
          </table>
          <%= will_paginate @guilds %>
        <% elsif @user == current_user %>
          <div class='tip'>你还没创建任何公会，赶紧<%= link_to "创建一个", new_guild_url %>吧
					<br/><br/>或者观看以下视频对这项功能进行进一步的了解，随时点击右上角<a href="#" class="icon-movie"></a>都可以观看此视频<br/><br/>
					<%= application_show %>
					</div>
        <% else %>
          <div class='tip'><%= subject %>是个懒虫</div>
        <% end %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
