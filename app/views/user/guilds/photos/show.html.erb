<%= stylesheet_link_tag 'test' %>
<%= stylesheet_link_tag 'cropper' %>
<%= javascript_include_tag 'textboxlist' %>
<%= javascript_include_tag 'friend' %>
<%= javascript_include_tag 'cropper' %>
<%= javascript_include_tag 'photo' %>

<% content_for :html_title, "#{@guild.name}的照片 - 17Gaming.com" %>
<% content_for :html_description, "#{@guild.name}的照片 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@guild.name}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <div class="friend-head space s_clear">
      <span class="left"><%= album_cover_image @guild.album, :class => "imgbox01" %></span>
      <p class="left">
        <strong><%= @guild.name%>公会照片</strong><br/>
        <%= link_to '公会主页', guild_url(@guild), :class => 'red' %>
      </p>
    </div>
    <div class="box02 canvas_int">
      <div class="tab tab01">
        <div class="right">
          <% if @membership and (@membership.is_veteran? or @membership.is_president?) %>
          <%= link_to "上传照片", new_guild_photo_url(:album_id => @album.id) %>
          <% end %>
        </div>
        <ul>
          <li><span><%= link_to "热门照片", hot_personal_photos_url(:id => current_user.id) %></span></li>
          <li><span><%= link_to "#{@guild.name}的相册", guild_albums_url(@guild) %></span></li>
        </ul>
      </div>
      <div class="pic-box">
        <div class="img-container-main s_clear">
          <div class="img-container-wrap">
            <div class="img-container">
              <div class="path-box">
								<label><%= @guild.name %>的相册</label>
                <label><%= album_link @album %></label><span>查看照片</span>
							</div>
              <div class="img-main">
                <div class="imgwrap box05">
                  <div class="photo-op">
										<% if @membership and (@membership.is_authorized? or @membership.is_president?) %>
										<span class="photo-op-mark"></span>
										<%= link_to_function "圈人", "tagger.start()" %> | 
										<% end %>
										<% if @membership and @membership.is_president? %>
										<span class="photo-op-edit"></span>
                    <%= facebox_link '编辑', edit_guild_photo_url(@photo) %> | 
										<span class="photo-op-del"></span>
                    <%= facebox_confirm '删除', guild_photo_url(@photo), {:method => :delete, :msg => '你确定要删除吗?'} %> |
										<% end %>
										<span class="photo-op-share" ></span>
										<%= facebox_link "分享", new_sharing_url(:shareable_type => 'Photo', :shareable_id => @photo.id) %> |
										<span class="photo-op-praise" ></span>
										<%=link_to_remote '赞', :url => digs_url("dig[diggable_type]" => @photo.class.base_class.to_s, "dig[diggable_id]" => @photo), :html => {:id=> "digging_#{@photo.class.to_s.underscore}_#{@photo.id}", :class => "red"}%>(已经被<span id="dig_<%=@photo.class.to_s.underscore%>_<%=@photo.id%>" class='gray'><%= @photo.digs_count %></span>人赞过)
									</div>
                  <p><%= resize_image @photo, :id => "photo_#{@photo.id}" %></p>
									<div class="pic-desc s_clear">
										<h4 class="box06">
										<% if @membership and @membership.is_president? %>
											<%= in_place_text_field :span, @photo, :notation, true, guild_photo_url(@photo), {}, {:empty_text => '点击增加照片描述', :parameter_name => 'photo[notation]', :rows => 2, :cols => 70} %>
										<% else %>
											<%= @photo.notation %>
										<% end %>
										</h4>
										<ul class="mark-list s_clear" id='photo_tags'>
										</ul>
										<div class="rows"></div> 
									</div>
                </div>
              </div>
            </div>
          </div>
          <div class="album">
            <%= render :partial => 'shared/photo_slide', :locals => {:album => @album, :photo => @photo} %>
          </div>
        </div>
      </div>
      <div class="foot">
        <div class="feed-list">
          <h4>评论(<%= @photo.comments_count %>)</h4>
          <%= render :partial => 'user/comments/comment_box', :locals => {:commentable => @photo, :recipient => @user} %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div></div>
</div></div></div></div>

<%= render :partial => 'user/photo_tags/control_panel', :locals => {:photo => @photo, :tags => @tags, :user => @user} %>

<% unless @reply_to.blank? %>
  <%= javascript_tag "Iyxzone.Comment.set('guild_photo', '#{@photo.id}', '#{@reply_to.login}', #{@reply_to.id})" %>
<% end %> 
