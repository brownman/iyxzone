<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-ploy">活动</h1>
    <div class="box02 canvas_int">
      <div class="tab tab01">
        <div class="icon">
          <%= render :partial => 'search' %>
        </div>
        <ul>
        <% if params[:type].to_i == 0 %>
          <li class='hover'><span><%= link_to "所有会员", guild_memberships_url(@guild, :type => 0) %></span></li>
        <% else %>
          <li><span><%= link_to "所有会员", guild_memberships_url(@guild, :type => 0) %></span></li>
        <% end %>
        <% if params[:type].to_i == 1 %>
          <li class='hover'><span><%= link_to "被邀请的人", guild_memberships_url(@guild, :type => 1) %></span></li>
        <% else %>
          <li><span><%= link_to "被邀请的人", guild_memberships_url(@guild, :type => 1) %></span></li>
        <% end %>
        <% if params[:type].to_i == 2 %> 
          <li class='hover'><span><%= link_to "请求加入的人", guild_memberships_url(@guild, :type => 2) %></span></li>
        <% else %>
          <li><span><%= link_to "请求加入的人", guild_memberships_url(@guild, :type => 2) %></span></li>
        <% end %>
      </div>
      <div class="piclist-rows" id='events'>
        <div id='members'>
        <% if params[:type].to_i == 1 %>
          <% if @memberships.total_entries == 0 %>
            <div class='gray'>你还没邀请别人加入你的工会，赶紧去<%= link_to '邀请', new_guild_invitation_url(@guild) %>你的好友</div>
          <% else %>
            <%= render :partial => 'invitees', :locals => {:memberships => @memberships} %>
          <% end %>
        <% elsif params[:type].to_i == 2 %>
          <% if @memberships.total_entries == 0 %>
            <div class='gray'>没人请求加入你的工会，你行不行？</div>
          <% else %>
            <%= render :partial => 'requestors', :locals => {:memberships => @memberships} %>
          <% end %>
        <% else %>
          <% if @memberships.total_entries == 0 %>
            <div class='gray'>没有成员。。囧，赶紧去<%= link_to '邀请', new_guild_invitation_url(@guild) %>你的好友</div>
          <% else %>
            <%= render :partial => 'members', :locals => {:memberships => @memberships} %>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div></div>
</div></div></div></div>
