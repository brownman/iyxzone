<% delivery = video_sharing_feed_delivery %>
<% sharing = delivery.feed_item.originator %>
<% video = sharing.shareable %>

<% render :layout => 'user/profiles/feed_delivery', :locals => {:icon_type => 'icon-video', :delivery => delivery} do %>
	<p><%= profile_link sharing.poster %> 分享了 <%= profile_link video.poster %> 的视频 <%= video_link video, :class => "shine"%></p>
  <p class="gray s_clear" id='video_<%= video.id %>'> <%= video_thumbnail video, :class=>'imgbox01' %></p>
	<p class="gray"><%= ftime video.created_at %> <%= link_to_function "评论", "Iyxzone.Comment.showForm('sharing', #{sharing.id}, null)", :class => "gray" %></p>
	<%= render :partial => 'user/comments/folded_comment_box', :locals => {:commentable => sharing, :recipient => sharing.poster} %>
<% end %>
