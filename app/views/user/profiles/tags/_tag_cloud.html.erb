<div class='impress-show s_clear space' id='tag_cloud'> 
<% if profile.tags.blank? %>
	还没有好友进行评价
<% else %>
	<% tag_cloud profile, %w(css1 css2 css3 css4) do |tag, css_class| %>
		<% if @user == current_user %>
			<a class="impress-<%=rand(4)%>"><span class='<%= css_class %>'><%= tag.name %></span><b class='icon2-close' onclick="Iyxzone.Profile.Tag.deleteTag(<%=profile.id%>, <%=tag.id%>, '<%= form_authenticity_token%>')"></b></a>
		<% else %>
			<a class="impress-<%=rand(4)%>"><span class='<%= css_class %>'><%= tag.name %></span></a>
		<% end %>
	<% end %>
<% end %>
</div>
