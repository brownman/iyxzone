<% delivery = photo_sharing_feed_delivery %>
<% sharing = delivery.feed_item.originator %>
<% user = sharing.poster %>
<% photo = sharing.shareable%>

<% render :layout => 'user/profiles/feed_delivery', :locals => {:icon_type => 'icon-photo', :delivery => delivery} do %>
	<p><%= profile_link user %> 分享了 <%= profile_link photo.poster%> 的照片</p>
  <p class="gray s_clear"><%= photo_link photo, :size => :medium %></p>
	<p class="gray"><%= ftime delivery.created_at %> <%= link_to_function "评论", "Iyxzone.Comment.showForm('#{photo.class.name.underscore}', #{photo.id}, null, #{photo.poster_id});", :class => "gray"%></p>
	<%= render :partial => "user/comments/folded_comment_box", :locals => {:commentable => sharing, :recipient => sharing.poster} %>
<% end %>
