<% content_for :javascript_include do %>
  <%= javascript_include_merged :mail %>
<% end %>

<% content_for :html_title, "#{current_user.login}的新站内信 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login}的新站内信 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
	<div class="round_m"><div class="round_body">
  <h1 class="app-letter">站内信</h1>
  <div class="box02 canvas_int space">
		<div class="tab tab01">
      <ul>
				<li><span><%= link_to "收件箱", mails_url(:type => 1) %></span></li>
        <li><span><%= link_to "发件箱", mails_url(:type => 0) %></span></li>
        <li class="nobg"><%= link_to "写站内信", new_mail_url %></li>
			</ul>
    </div>
		<div class="appcontent01">
			<h3>写站内信</h3>
      <div class="inbox-form formcontent">
			<% form_for :mail, :url => mails_url, :html => {:onsubmit => "Iyxzone.Mail.Builder.deliver(this, $('submit_btn')); return false;"}  do |f| %>
				<div class="rows s_clear">
					<div class="fldid"><%= f.label '收件人：' %></div>
          <div class="fldvalue">
            <%= render :partial => 'user/friend_tags/control_panel' %>
          </div>
        </div>
        <div class='drop-menu' id='recipients_list' style="display:none"></div>
        <div class="rows s_clear">
					<div class="fldid"><%= f.label '标题：' %></div>
          <div class="fldvalue">
						<div class="textfield"><%= f.text_field 'title' %></div>
          </div>
        </div>
        <div class="emptions s_clear">
					<div class="fldid">&nbsp;</div>
          <div class="fldvalue">
						<%= emotion_link 'mail_content' %>
          </div>
        </div>
        <div class="rows s_clear">
					<div class="fldid"><%= f.label '内容：' %></div>
          <div class="fldvalue">
						<div class='bookbox'>
							<%= f.text_area 'content' %>
							<div class='buttons'>
								<span class="button"><span><button type='submit' id='submit_btn'>发送</button></span></span>
								<span class="button button-gray"><span><button type="reset">取消</button></span></span>
							<%= emotion_link 'mail_content', :class => 'icon-face right' , :align => "absmiddle"%>
							</div>
						</div>
					</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div></div>
</div></div></div></div>

<% onload_javascript_tag do %>
  Iyxzone.Mail.Builder.recipientBuilder = new Iyxzone.Friend.Tagger(10, [],[],[],'toggle_button', 'friend_login', 'friend_list', 'friend-wrap', 'friend_items', 'game_selector', 'confirm_btn', 'cancel_btn', null);
<% end %>

<% unless @recipients.blank? %>
  <% onload_javascript_tag do %>
  <% @recipients.each do |r| %>
    Iyxzone.Mail.Builder.recipientBuilder.addTags([{id: <%= r.id %>, profileID: <%= r.profile.id %>, login: '<%= r.login %>'}]);
  <% end %>
  <% end %>
<% end %>
