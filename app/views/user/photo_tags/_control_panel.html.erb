<div id='control_panel' style="display:none">
  <div>
    <%= label_tag '这是谁...' %><br/>
    <%= text_field_tag 'friend[login]', '', :size => 35 %>
    <%= button_to_function '', "", :id => 'toggle_button' %><br/>
    <div id='friend_list' style="display:none"></div>
    <div id="friend_table" class="box05" style="display:none">
      <div class="title01">
        <div class="right">
          <select name="" id='game_selector' >
            <option value='all'>全部好友</option>
            <% current_user.games.each do |game| %>
              <option value=<%= game.id %>><%= game.name %></option>
            <% end %>
          </select>
        </div>
        <h1>限选1人</h1>
      </div>
      <div class="checkgroup" id='friend_items'></div>
    </div>
    <% form_remote_for :tag, :url => photo_tags_url(:photo_type => photo.class.name.underscore, :photo_id => photo.id), :html => {:id => 'tag_form'} do |f| %>
      <%= f.label '说点什么吧' %><br/>
      <%= f.text_area 'content', :rows => 2, :cols => 40 %><br/>
      <%= button_to_function '确定', "", :id => 'confirm_btn'%>
      <%= button_to_function '取消', "", :id => 'cancel_btn'%>
    <% end %>
  </div>
</div>
