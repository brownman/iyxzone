        <div class="round_m"><div class="round_body">
<h1 class="big-ploy">活动</h1>
<div class="box02 canvas_int">
	<div class="tab tab01">
		<% if @user == current_user %>
    <div class="right">
      <%= link_to "新建活动", new_event_url %>
    </div>
    <% end %>
		<ul>
			<li><span><%= link_to "热门活动", hot_events_url(:id => @user.id) %></span></li>
			<li><span><%= link_to "最近活动", recent_events_url(:id => @user.id) %></span></li>
			<li class='hover'><span><%= link_to "#{get_subject @user}的活动", events_url(:id => @user.id) %></span></li>
			<% if @user == current_user %>
			<li><span><%= link_to "朋友的活动", friends_events_url %></span></li>
			<% end %>
		</ul>
  </div>
  <div class="piclist-rows" id='events'>
	  <div class="nav-link">
      <ul class="s_clear">
        <li><%= link_to "<span>#{get_subject @user}发起的</span>", events_url(:id => @user.id) %></li>
        <li class='hover'><%= link_to "<span>#{get_subject @user}要参加的</span>", upcoming_events_url(:id => @user.id) %></li>
        <li><%= link_to "<span>#{get_subject @user}参加过的</span>", participated_events_url(:id => @user.id) %></li>
      </ul>
    </div>
	  <%= render :partial => 'event_items', :object => @events %>
  </div>
</div>
