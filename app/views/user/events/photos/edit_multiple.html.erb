<% content_for :html_title, "#{@event.title}的照片编辑 - 17Gaming.com" %>
<% content_for :html_description, "#{@event.title}的照片编辑 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@event.title}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <div class="friend-head space s_clear">
      <span class="left"><%= album_cover @event.album, :class => "imgbox01" %></span>
      <p class="left">
        <strong><%= @event.title%>活动照片</strong><br/>
        <%= link_to '活动主页', event_url(@event), :class => 'red' %>
      </p>
    </div>
    <div class="box02 canvas_int">
      <div class="tab tab01">
        <div class="right">
          <% if @participation and !@participation.is_authorized? %>
            <%= link_to "上传照片", new_event_photo_url(:album_id => @album.id) %>
          <% end %>
        </div>            
        <ul>                  
          <li><span><%= link_to "热门照片", hot_personal_photos_url(:uid => current_user.id) %></span></li>
          <li><span><%= link_to "我的相册", personal_albums_url(:uid => current_user.id) %></span></li>
          <li><span><%= link_to '好友相册', friends_personal_albums_url(:uid => current_user.id) %></span></li>
          <li><span><%= link_to "圈了我的照片", relative_personal_photos_url(:uid => current_user.id) %></span></li>
        </ul>
      </div>
      <div class="photo-box">
        <div class='path-box'>
          <label>活动"<%= event_link @event %>"</label>
          <span>编辑照片</span>
        </div>
        <% form_tag update_multiple_event_photos_url(:album_id => @album.id), :html => {:method => :put, :onsubmit=> "Iyxzone.disableButton($(edit_multiple_event_photos_btn),'请等待..');"} do %>
        <% @photos.each do |p| %>
        <% fields_for 'photos[]', p do |f| %>        
        <div class="photo-list box04 s_clear">
          <div class="form-wrap">
            <div class="formcontent">
              <div class="rows s_clear">
                <div class="fldid"><label for="desc1">描述：</label></div>
                <div class="fldvalue"><%= f.text_area :notation %></div>
              </div>
              <div class="rows s_clear">
                <div class="fldid">封面：</div>
                <div class="fldrd"><%= radio_button_tag 'cover_id', p.id, false %></div>
                <div class="fldrdvalue"><label for="r1">设为活动封面</label></div>
              </div>
            </div>
          </div>
          <div class="img">
            <p><%= image_tag p.public_filename(:large), :class => 'imgbox01', :width => '76px', :height => '85px' %></p>
          </div>
        </div>
      <% end %>
      <% end %>
        <div class="buttons s_clear">
          <table class="center" cellpadding="0">
            <tr><td>
              <span class="button"><span><button type="submit" id="edit_multiple_event_photos_btn">保存修改</button></span></span>
            </td></tr>
          </table>
        </div>
      <% end %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
