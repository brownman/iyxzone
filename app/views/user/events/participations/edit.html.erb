<% facebox_tag '更新状态' do %>
  <% rows_form_for :participation, :html => {:onsubmit => "Iyxzone.Event.Participation.update(#{@participation.id}, #{@participation.event_id}, this, $(edit_participation_btn));return false;"} do |f| %>
    <div class='formcontent'>
      <% f.rows do %>
        <%= radio_button_tag 'status', 3 %><%= label_tag '', '肯定去' %><br/>
        <%= radio_button_tag 'status', 4 %><%= label_tag '', '可能去' %><br/>
      <% end %>
    </div>
    <%= f.z_submit :submit => {:text => '完成', :id => 'edit_participation_btn'}, :cancel => {:text => '取消', :onclick => 'Iyxzone.Facebox.close();'} %>
  <% end %>
<% end %>
