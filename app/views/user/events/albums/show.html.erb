<% content_for :html_title, "#{@event.title}的相册 - 17Gaming.com" %>
<% content_for :html_description, "#{@event.title}的相册 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@event.title}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <div class="friend-head space s_clear">
      <span class="left"><%= album_cover @event.album, :class => "imgbox01", :size => 'medium', :width => 50, :height => 50 %></span>
      <p class="left">
        <strong><%= @event.title%>活动照片</strong><br/>
        <%= link_to '活动主页', event_url(@event)  %>
      </p>
    </div>
    <div class="box02 canvas_int space">
      <div class="tab tab01">
        <div class="right">
          <% if @user == current_user %>
            <%= link_to "上传照片", new_event_photo_url(:album_id => @album.id) %>
          <% end %>
        </div>
        <ul>
          <li><span><%= link_to "热门照片", hot_personal_photos_url(:uid => current_user.id) %></span></li>
          <li class='hover'><span><%= link_to "#{h @event.title}的相册", event_album_url(@album, :format => 'html') %></span></li>
        </ul>       
      </div>
      <div class="pic-box">
        <div class="path-box">
          <label>活动"<%= event_link @event %>"</label>
          <span>相册</span>
					<%= facebox_link '分享', new_sharing_url(:url => event_album_url(@album)), :width => 450, :class => 'right love-btn' %>
        </div>
        <table class="photo-edit-list">
				<% k = @photos.size/4 %>
        <% if @photos.total_entries != 0 %>
				<% 0.upto(k) { |i| %>
				<% if k == i%>
					<% n = @photos.size % 4 - 1 %>
				<% else %>
					<% n = 3 %>
				<% end %>
				<% j = i*4 %>
				<tr>
        <% @photos[j..j+n].each do |p| %>                         
          <td valign="bottom" width=25%>
            <%= photo_link p, :class => 'imgbox02' %>
					</td>
				<% end %>
				<% if n < 3 %>
					<% n.upto(2){ %>
						<td valign="bottom" width=25%></td>
					<% } %>
				<% end %>
				</tr>
        <% if @user == current_user %>
					<tr>
					<% @photos[j..j+n].each do |p| %>                         
						<td><%= facebox_link "", edit_event_photo_url(p, :at => 'album'), :class => "icon-active icon-active-edit" %><%= facebox_confirm '', event_photo_url(p), {:msg => '你确定要删除这张图片吗', :method => 'delete'}, {:class => "icon-active"} %></td>
					<% end %>
					<% if n < 3 %>
						<% n.upto(2){ %>
							<td></td>
						<% } %>
					<% end %>
					</tr>
        <% end %>
        <% } %>
        <%= will_paginate @photos %>
        <% else %>
					<% if @user == current_user %>
					<div class='tip'>活动还没有图片，你赶紧<%= link_to '上传', new_event_photo_url(:album_id => @album.id) %>吧</div>
					<% else %>
					<div class='tip'>活动还没有图片</div>
					<% end %>
        <% end %>
				</table>
      <div class="pic-desc">
				<% if @user == current_user %>
          <h4 class='box06'><%= in_place_text_area @album, :description, '点击添加相册描述', :param_name => 'album[description]'  %></h4>
        <% else %>
          <h4 class="box06"><%= simple_format @album.description %></h4>
        <% end %>
        <p class="gray">
        <% unless @album.uploaded_at.blank? %>
            <span class="time-update"><%= ftime @album.uploaded_at %>更新</span><br/>
          <% end %>
          <span class="time-create"><%= ftime @album.created_at %>创建</span>
        </p>
      </div>
			</div>
      <div class="foot cmt-space">
        <div class="feed-list">
          <h4>评论(<%= @album.comments_count %>)</h4>
          <%= render :partial => 'user/comments/comment_box', :locals => {:commentable => @album, :recipient => @user} %>
        </div>
      </div>
    </div>
  </div>
</div></div>
</div></div></div></div>

<% unless @reply_to.blank? %>
<%= onload_javascript_tag "Iyxzone.Comment.set('event_album', #{@album.id}, '#{@reply_to.login}', #{@reply_to.id})" %>
<% end %>
