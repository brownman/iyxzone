<% content_for :html_title, "#{@event.title}的相册 - 17Gaming.com" %>
<% content_for :html_description, "#{@event.title}的相册 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@event.title}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <%= render :partial => 'user/events/event_header', :locals => {:text => "#{@event.title}活动照片"} %>
    <div class="box02 canvas_int space">
      <%= render :partial => 'tab', :locals => {:user => @user} %>
      <div class="pic-box">
        <%= render :partial => 'album_path', :locals => {:user => @user} %>
        <% if @photos.total_entries != 0 %>
          <%= render :partial => 'user/albums/album_table' %>
        <% else %>
          <% if @user == current_user %>
          <div class='tip'>还没有图片，你赶紧<%= link_to '上传', new_event_photo_url(:album_id => @album.id) %>吧</div>
          <% else %>
          <div class='tip'>还没有图片</div>
          <% end %>
        <% end %>
        <%= render :partial => 'user/albums/album_desc', :locals => {:user => @user, :album => @album} %>
        <%= render :partial => 'user/albums/album_func' %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
