<div class="s2m1 eventFunc">
  <div class="title fix">
    <span class="i iFunc02"></span><h2><strong>活动操作</strong><em></em></h2>
  </div>
  <div class="con">
    <ul>
      <% if event.expired? %>
        <% if user == current_user %>
          <li><%= link_to '上传照片', new_event_photo_url(:album_id => album) %></li>
        <% elsif event.has_participant? current_user %>
          <li><%= link_to '给组织者发信', new_mail_url(:recipient_ids => [event.poster_id]) %></li>
        <% end %>
        <li>该活动已经过期</li>
      <% else %>
        <% if user == current_user %>
          <li><%= link_to '编辑活动', edit_event_url(event) %></li>
          <li><%= link_to '邀请更多人', new_event_invitation_url(event) %></li>
          <li><%= link_to '上传图片', new_event_photo_url(:album_id => album) %></li>
          <li><%= link_to_function '放所有人鸽子', "Iyxzone.Event.confirmDeletingEvent(#{event.id}, #{user.id});" %></li>
        <% elsif event.has_participant? current_user %>
          <li><%= link_to '给组织者发信', new_mail_url(:recipient_ids => [event.poster_id]) %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

