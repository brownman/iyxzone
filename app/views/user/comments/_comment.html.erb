<% type = comment.commentable.class.name.underscore %>
<div class="box04 word-box" id='comment_<%= comment.id %>'>
	<div class="img"><%= avatar comment.poster, :size => :small %></div>
  <div class="word">
    <p><%= profile_link comment.poster %> <span><%= ftime comment.created_at %> -</span> <%= link_to_function '回复', "Iyxzone.Comment.showForm('#{type}', #{comment.commentable.id}, '#{comment.poster.login}')" %></p>
    <p><%= comment.content %></p>
  </div>
  <% if comment_deletable_by_current_user comment%>
    <%= link_to_remote 'x', :url => comment_url(comment), :method => :delete, :class => 'icon-active' %>
  <% end %>
</div>
