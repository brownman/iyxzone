<% content_for :javascript_include do %>
  <%= javascript_include_tag 'video' %>
<% end %>

<% content_for :html_title, "#{current_user.login} - 相关视频 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login} - 相关视频 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
	<% if @user == current_user %>
    <h1 class="app-video">视频</h1>
	<% else %>
    <div class="friend-head space s_clear">
      <span class="left"><%= avatar @user, :class=>"imgbox01"%></span>
      <p class="left">
        <strong><%= @user.login %>的视频</strong><br />
        <%= link_to '个人主页', profile_url(@user.profile), :class=>'red'%>
      </p>
    </div>
	<% end %>
    <div class="box02 canvas_int space">
      <div class="tab tab01">
        <% subject = get_subject @user %>
        <div class="right"><%= link_to "新视频", new_video_url %></div>
        <ul>
          <li><span><%= link_to "热门视频", hot_videos_url %></span></li>
          <li><span><%= link_to "#{subject}的视频", videos_url(:uid => @user.id) %></span></li>
          <li class='hover'><span><%= link_to "#{subject}的相关视频", relative_videos_url(:uid => @user.id) %></span></li>
          <% if @user == current_user %>
            <li><span><%= link_to "好友的视频", friends_videos_url %>
          <% end %>
        </ul>
      </div>
      <div class='feed-box01'>
        <% if @videos.blank? %>
          <div class='gray'>没有和<%= subject %>有关是视频</div>
        <% else %>
          <div class="gray">共<%= @videos.total_entries %>篇</div>
          <div class='feed-img-list' id='videos'>
            <%= render :partial => 'video_item2', :collection => @videos %>
          </div>
          <%= will_paginate @videos %>
        <% end %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
