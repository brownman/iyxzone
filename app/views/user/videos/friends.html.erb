<% content_for :javascript_include do %>
  <%= javascript_include_tag 'video' %>
<% end %>

<% content_for :html_title, "#{current_user.login} - 好友视频 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login} - 好友视频 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<% canvas_tag do %>
  <h1 class="app-video">视频</h1>
  <div class="box02 canvas_int space">
    <%= render :partial => 'tab', :locals => {:user => current_user, :hover => 3} %>
    <div class="feed-box01 list-v2">
      <% if @videos.blank? %>
        <div class='gray'>你的好友都是懒虫，还没任何视频</div>
      <% else %>
        <div class='feed-img-list'>
					<%= render :partial => 'video_item2', :collection => @videos %>
				</div>
        <%= will_paginate @videos %>
      <% end %>
    </div>
  </div>
<% end %>
