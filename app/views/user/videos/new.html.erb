<%= stylesheet_link_tag 'test' %>
<%= javascript_include_tag 'textboxlist' %>
<%= javascript_include_tag 'nicEdit' %>
<%= javascript_include_tag 'video' %>
<%= javascript_include_tag 'friend' %>

<% content_for :left do %>
  <%= render :partial => '/app_menu' %>
<% end %>

<% subject = get_subject @user %>

<%= link_to "热门视频", hot_videos_url(:id => @user.id) %> |
<%= link_to "最新视频", recent_videos_url(:id => @user.id) %> |
<%= link_to "#{subject}的视频", videos_url(:id => @user.id) %> |
<% if @user == current_user %>
  <%= link_to "好友视频", friends_videos_url %> |
<% end %>
<%= link_to "#{subject}的相关视频", relative_videos_url(:id => @user.id)%> |
<% if @user == current_user %>
  <%= link_to "新视频", new_video_url %>
<% end %>


<%= error_messages_for :video, :header_message => '遇到以下问题，没法成功保存', :message => nil %>

<div>
<% form_for :video, :url => videos_url, :html => {:id => 'video_form'} do |f| %>
  <div class='title'>
    <%= f.label "title" %><br/>
    <%= f.text_field 'title' %>
  </div>
  <div class='url'>
    <%= f.label 'url' %><br/>
    <%= f.text_field 'video_url', :id => 'video_url' %>
  </div>
  <div class='options'>
    <%= f.label "category: " %><%= f.collection_select 'game_id', @user.games, :id, :name, {:prompt => '---'} %><br/>
    <%= f.label "privilege: "%><%= privilege_select_tag(:video) %>
  </div>
  <div class='tag'>
    添加和视频相关的好友<br/>
    <%= text_field_tag 'friend[login]', '', :size => 50 %><%= button_to_function '', :id => 'toggle_button' %>
    <div id='friend_list' style="display:none"></div>
    <div id="friend_table" class="box05" style="display:none">
      <div class="title01">
        <div class="right">
          <select name="" id='game_selector' >
            <option value='all'>全部好友</option>
            <% current_user.games.each do |game| %>
              <option value=<%= game.id %>><%= game.name %></option>
            <% end %>
          </select>
        </div>
        <h1>选择你的好友</h1>
      </div>
      <div class="checkgroup" id='friend_items'></div>
      <div class="buttons s_clear">
        <table class="center" cellpadding="0"><tr>
          <td>
            <span class="button"><span><button onclick="" id="confirm_btn">确定</button></span></span>
          </td>
          <td>
            <span class='button'><span><button onclick="" id='cancel_btn'>取消</button></span></span>
          </td>
        </tr></table>
      </div>
    </div>
  </div>
  <div class='submit'>
    <%= button_to_function "保存", "Iyxzone.Video.Builder.save(this)", :class => "confirm-button" %>
  </div>
<% end %>
</div>

<%= javascript_tag "
  Iyxzone.Video.Builder.tagBuilder = new Iyxzone.Friend.Tagger([], [], [], 'toggle_button', 'friend_login', 'friend_list', 'friend_table', 'friend_items', 'game_selector', 'confirm_btn', 'cancel_btn'); 
" %>
