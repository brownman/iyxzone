      <div class="tab tab01">
        <div class="right">
          <%= link_to "上传照片", select_personal_albums_url %>
          <%= facebox_link "新建相册", new_personal_album_url(:at => 'index') %>
        </div>
        <ul>
          <% subject = get_subject user %>
          <li <% if hover==0 %>class='hover'<% end %>><span><%= link_to "热门照片", hot_personal_photos_url %></span></li>
          <li <% if hover==1 %>class='hover'<% end %>><span><%= link_to "#{subject}的相册", personal_albums_url(:uid => user.id) %></span></li>
          <li <% if hover==2 %>class='hover'<% end %>><span><%= link_to "圈了#{subject}的照片", relative_personal_photos_url(:uid => user.id) %></span></li>
          <% if user == current_user %>
            <li <% if hover==3 %>class='hover'<% end %>><span><%= link_to '好友相册', friends_personal_albums_url(:uid => user.id) %></span></li>
          <% end %>
        </ul>       
      </div>

