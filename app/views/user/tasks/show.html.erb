任务描述:
<br />
<ul>
	<%= content_tag :li, "id: %{@current_task.id}" %>
	<%= content_tag :li, "prerequirement: %{@current_task.prerequirement}" %>
	<%= content_tag :li, "title: %{@current_task.description[:title]" %>
	<% @current_task.description[:image].each do |img| %>
		<%= content_tag :li, image_tag(img) %>
	<% end %>
</ul>

<%= link_to("做这个任务！", edit_user_task_path(@current_task) ) if @current_task.can_be_select_by? current_user %>
