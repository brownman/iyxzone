<% content_for :javascript_include do %>
  <%= javascript_include_merged :game %>
<% end %>

<% content_for :html_title, "#{@user.login}的游戏 - 17Gaming.com" %>
<% content_for :html_description, "#{@user.login}的游戏 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<% subject = get_subject @user %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
	<% if @user == current_user %>
  <h1 class="app-game">游戏</h1>
	<% else %>
    <div class="friend-head space s_clear">
      <span class="left"><%= avatar @user, :class=>"imgbox01"%></span>
      <p class="left">
        <strong><%= @user.login %>的游戏</strong><br />
        <%= link_to '个人主页', profile_url(@user.profile), :class=>'red'%>
      </p>
    </div>
	<% end %>
    <div class="box02 canvas_int">
	    <div class="tab tab01">
		    <ul>
			    <li><span><%= link_to "热门游戏", sexy_games_url(:uid => @user.id) %></span></li>
	  		    <li class='hover'><span><%= link_to "#{subject}的游戏", games_url(:uid => @user.id) %></span></li>
					<% if @user == current_user %>
			    <li><span><%= link_to "好友的游戏", friends_games_url %></span></li>
					<% end %>
		    </ul>
      </div>
	    <div class="piclist-rows">
        <div class='nav-link'>
          <ul class="s_clear">
            <li class='hover'><%= link_to "<span>#{subject}玩的游戏</span>", games_url(:uid => @user.id) %></li>
            <li><%= link_to "<span>#{subject}关注的游戏</span>", interested_games_url(:uid => @user.id) %></li>
          </ul>
        </div>
		    <%= render :partial => 'game_items', :object => @games %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
