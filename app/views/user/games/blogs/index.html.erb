    <%= render :partial => 'user/games/game_header', :locals => {:text => "#{@game.name}的相关日志"} %>
    <div class="box02 canvas_int space">
      <div class="tab tab01">
        <div class="right"><%= link_to "写新日志", new_blog_url %></div>
