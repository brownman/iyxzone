<% content_for :html_title, "#{@game.name} - 主页 - 17Gaming.com" %>
<% content_for :html_description, "#{@game.name} - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@game.name}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<% content_for :left do %>
  <%= render :partial => '/app_menu' %><br/>
  <div class='blog-right-bar'>
    <div class='part'>
      <h3>日志分类: </h3>
      <% game_options = [['全部', nil]] %>
      <% @user.games.each {|g| game_options << [g.name, g.id] } %>
      <%= select_tag '', options_for_select(game_options, params[:game_id].to_i), :onchange => "window.location.href = '#{hot_blogs_url(:id => @user.id)}&game_id='+this.value;" %> 
    </div>
  </div>
<% end %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <div class="friend-head space s_clear">
      <span class="left"></span>
      <p class="left">
        <strong><%= game_link @game %>的相关日志</strong><br />
        <%= link_to '游戏主页', game_url(@game), :class=>'red'%>
      </p>
    </div>
    <div class="box02 canvas_int">
      <div class="tab tab01">
        <div class="right"><%= link_to "写新日志", new_blog_url %></div>
        <ul>
          <% subject = get_subject @user %>
          <li><span><%= link_to "热门日志", hot_blogs_url(:id => @user.id) %></a></span></li>
          <li><span><%= link_to "#{subject}的日志", blogs_url(:id => @user.id) %></span></li>
          <li class='hover'><span><%= link_to "与#{@game.name}相关的日志", game_blogs_url(:game_id => @game.id) %></span></li>
        </ul>
      </div>
      <div class="feed-box01">
        <div class="path-box">
          <label>游戏"<%= game_link @game %>"</label>
          <span>所有日志</span>
        </div>
        <%= render :partial => 'user/blogs/blog_item2', :collection => @blogs %>
        <%= will_paginate @blogs %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
