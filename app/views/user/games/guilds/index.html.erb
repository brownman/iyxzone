<% content_for :html_title, "#{@game.name} - 游戏公会 - 17Gaming.com" %>
<% content_for :html_description, "#{@game.name}的游戏公会 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@game.name}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
        <div class="round_m"><div class="round_body">
    <div class="friend-head space s_clear">
      <span class="left"></span>
      <p class="left">
        <strong><%= game_link @game %>的相关公会</strong><br />
        <%= link_to '游戏主页', game_url(@game), :class=>'red'%>
      </p>
    </div>
<div class="box02 canvas_int">
	<div class="tab tab01">
		<% subject = get_subject @user %>
		<ul>
			<li><span><%= link_to "热门工会", hot_guilds_url(:id => @user.id) %></span></li>
			<li><span><%= link_to '最新工会', recent_guilds_url(:id => @user.id) %></span></li>
			<li><span><%= link_to "#{subject}的工会", guilds_url(:id => @user.id) %></span></li>
      <% if @user == current_user %>
			<li><span><%= link_to "好友工会", friends_guilds_url %></span></li>
		  <% end %>
    </ul>
		<div class='right'>
			<%= link_to "新工会", new_guild_url %>
		</div>
  </div>
	<div class="piclist-rows">
    <div class='path-box'>
      <label>游戏"<%= game_link @game %>"</label>
      <span>工会</span>
    </div>
		<%= render :partial => 'user/guilds/guild_items', :object => @guilds %>
  </div>
</div>

</div></div>
</div></div></div></div>
