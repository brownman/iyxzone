<% content_for :javascript_include do %>
  <%= javascript_include_merged :search %>
<% end %>

<% content_for :html_title, "#{@game.name} - 游戏玩家 - 17Gaming.com" %>
<% content_for :html_description, "#{@game.name}游戏玩家 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{@game.name}, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
	<div class="round_m"><div class="round_body">
    <div class="friend-head space s_clear">
      <span class="left"></span>
      <p class="left">
        <strong><%= game_link @game %>的玩家</strong><br />
        <%= link_to '游戏主页', game_url(@game), :class=>'red'%>
      </p>
    </div>
    <div class="box02 canvas_int">
			<div class="tab tab01">
				<div class="right"><%= link_to "激请好友加入" %></div>
				<ul>
					<% if @playing %>
					<li><span><%= link_to '同服玩家', game_comrades_url(@game) %></span></li>
					<% end %>
					<li class='hover'><span><%= link_to '游戏玩家', game_players_url(@game) %></span></li>
				</ul>
      </div>
			<div class="friend-box">
				<div class="box04 friend-one-search">
					搜索游戏内的玩家
					<% form_tag search_game_players_url(@game), :class => "formcontent", :id => 'user_form', :onsubmit => "Iyxzone.Search.searchUsers($('game_username_search_btn')); return false;" do %>
            <div class="rows s_clear">
              <div class="fldvalue">
                <div class="textfield"><%= text_field_tag 'key','用户名查找', :onclick => "$(this).clear();" %></div>
              </div>
              <div class="fldbtn"><span class="button"><span><button type="submit" id="game_username_search_btn">查找</button></span></span></div>
							<div class='link'><%= link_to_function '按游戏角色查找', "Iyxzone.Search.showCharacterForm()" %></div>
            </div>
          <% end %>
					<% form_tag character_search_game_players_url(@game), :class => "formcontent", :id => 'character_form', :style => "display:none", :onsubmit => "Iyxzone.Search.searchCharacters($('game_charactername_search_btn')); return false;" do %>
            <div class="rows s_clear">
              <div class="fldvalue">
                <div class="textfield"><%= text_field_tag 'key','游戏角色查找', :onclick => "$(this).clear();" %></div>
              </div>
              <div class="fldbtn"><span class="button"><span><button type="submit" id='game_charactername_search_btn'>查找</button></span></span></div>
							<div class='link'><%= link_to_function '按用户名查找', "Iyxzone.Search.showUserForm()" %></div>
            </div>
          <% end %>
        </div>
				<div class="box02 appcontent01">
          <div class="piclist-rows cmt-space">
            <table cellspacing='0' cellpadding='0'>
              <% @players.each do |character| %>
              <% f = character.user %>
              <tr>
                <td>
									<div class='imgwrap'>
										<%= avatar f, :size => :medium, :class=>'imgbox01' %>
									</div>
									<div class='data jl-data'>
										<p><%= profile_link f %></p>
										<p>
											<%= character.server.name %>,
											<%= character.name %>
										</p>
										<p class="space">
											<%unless current_user == f %>
											<% unless current_user.relationship_with(f)=='friend' %>
											<%= facebox_link '', new_friend_request_url(:friend_id => f.id), :class => "friend-btn w-l" %>
											<% end %>
											<%= link_to '', new_mail_url(:recipient_ids => [f.id]), :class => "msg-btn" %>
											<% end %>
										</p>
									</div>
								</td>
              </tr>
              <% end %>
            </table>
            <div class="space s_clear">
              <%= will_paginate @players %>
            </div>
          </div>
        </div>
      </div>
    </div>
	</div></div>
</div></div></div></div>

