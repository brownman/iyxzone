<table>
  <tr>
    <td class="id">公司：</td>
    <td class="value"><%= link_to @game.company, @game.official_web %></td>
  </tr>
  <tr>
    <td class="id">发行：</td>
    <td class="value"><%= ftime2 @game.sale_date %></td>
  </tr>
  <tr>
    <td colspan="2" align="center"><%= facebox_link "分享", new_sharing_url(:url => game_url(@game)), :width => 450, :class => 'share-btn' %> </td>
  </tr>
  <tr>
    <td class="id">玩家打分：</td>
	</tr>
</table>
<div id='game_<%= @game.id %>_rating_form'>
<span id='game_attention_<%= @game.id %>'>
<% if @attention %>
  <%= link_to_remote "取消关注", :url => game_attention_url(@game, @attention, :at => 0), :method => :delete %>
<% else %>
  <%= link_to_remote "关注", :url => game_attentions_url(@game, :at => 0) %>
<% end %>
</span> 
<% if !@game.is_rateable_by? current_user %>
  <%= render :partial => 'user/ratings/show', :locals => {:rateable => @game} %>
<% else %>
  你还没打分，可以打分:
  <%= render :partial => 'user/ratings/new', :locals => {:rateable => @game} %>
<% end %>
</div>
