<table>
  <tr>
    <td class="id">公司：</td>
    <td class="value"><%= link_to game.company, game.official_web %></td>
  </tr>
  <tr>
    <td class="id">发行：</td>
    <td class="value"><%= ftime2 game.sale_date %></td>
  </tr>
  <tr>
    <td colspan="2" align="center">
      <div class='op' id='game_attention_<%= game.id %>'>
			<% if attention %>
        <%= render :partial => 'user/attentions/unfollow', :locals => {:attention => attention} %>
      <% else %>
        <%= render :partial => 'user/attentions/follow', :locals => {:attentionable => game} %>
      <% end %>
      </div>
		</td>
  </tr>
  <tr>
    <td class="id">玩家打分：</td>
	</tr>
</table>
<div id='game_<%= game.id %>_rating_form'>
<% if !game.is_rateable_by? current_user %>
  <%= render :partial => 'user/ratings/show', :locals => {:rateable => game} %>
<% else %>
  你还没打分，可以打分:
  <%= render :partial => 'user/ratings/new', :locals => {:rateable => game} %>
<% end %>
</div>
