<% deleteable = game.is_tag_deleteable_by? current_user %>
<div class='impress-show s_clear space'> 
	<% tag_cloud game, %w(css1 css2 css3 css4) do |tag, css_class| %>
		<% if deleteable %>
			<a href="javascript:void(0)" class="impress-<%=rand(4)%>" id='tag_<%= tag.id %>'><span class=<%= css_class %>><%= tag.name %></span><b class='icon2-close' onclick="Iyxzone.Game.Tag.confirmDeletingTag(<%=game.id%>, <%=tag.id%>)"></b></a>
		<% else %>
			<a href="javascript:void(0)" class="impress-<%=rand(4)%>"><span class=<%= css_class %>><%= tag.name %></span></a>
		<% end %>
	<% end %>
</div>
