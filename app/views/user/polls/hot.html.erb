
<% content_for :html_title, "#{current_user.login} - 热门投票 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login} - 热门投票 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<% canvas_tag do %>
  <h1 class="app-vote">投票</h1>
  <div class="box02 canvas_int space">
    <%= render :partial => 'tab', :locals => {:user => current_user, :hover => 0} %>   
    <div class="vote-box">
      <%= render :partial => 'hot_nav', :locals => {:hover => 0} %>
      <% if @polls.total_entries != 0 %>
        <table class="vote-table" cellpadding="0"> 
          <%= render :partial => 'poll_item', :collection => @polls %>
        </table>
        <%= will_paginate @polls %>
      <% else %>
        <div class='gray'>还没任何投票，赶快<%= link_to '创建一个', new_poll_url %>吧</div>
      <% end %>
    </div>
  </div>
<% end %>
