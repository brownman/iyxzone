<% content_for :html_title, "#{current_user.login} - 最新投票 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login} - 最新投票 - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 游戏活动, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
  <div class="round_m"><div class="round_body">
    <h1 class="app-vote">投票</h1>
    <div class="box02 canvas_int space">
      <%= render :partial => 'tab', :locals => {:user => current_user, :hover => 0} %>   
      <div class="vote-box">
        <div class="nav-link">
          <ul class="s_clear">
            <li><%= link_to "<span>人气最高</span>", hot_polls_url %></li>
            <li class='hover'><%= link_to "<span>最新创建</span>", recent_polls_url %></li>
          </ul>
        </div>
        <% if @polls.total_entries != 0 %>
          <table class="vote-table" cellpadding="0"> 
            <%= render :partial => 'poll_item', :collection => @polls %>
          </table>
          <%= will_paginate @polls %>
        <% else %>
          <div class='gray'>还没任何投票，赶快<%= link_to '创建一个', new_poll_url %>吧</div>
        <% end %>
      </div>
    </div>
  </div></div>
</div></div></div></div>
