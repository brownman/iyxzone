<% content_for :left do %>
  <%= render :partial => '/app_menu' %>
<% end %>

<%= javascript_include_tag 'poll' %>

<% subject = get_subject @user %>

<ul>
      <li><span><%= link_to "热门投票", hot_polls_url(:id => @user.id) %></span></li>
      <li><span><%= link_to "最近投票", recent_polls_url(:id => @user.id) %></span></li>
      <li class='hover'><span><%= link_to "#{get_subject @user}的投票", polls_url(:id => @user.id) %></span></li>
      <% if @user == current_user %>
      <li><span><%= link_to "朋友的投票", friends_polls_url(:id => @user.id) %></span></li>
      <% end %>
    </ul>

<h3>发布新投票</h3>

<%= error_messages_for :poll, :header_message => '以下原因导致没法保存', :message => nil %>

<% form_for :poll, :html => {:id => 'poll_form'} do |f| %>
  <%= f.label '投票主题' %>
  <%= f.text_field 'name' %><%= link_to_function "增加投票描述", "Iyxzone.Poll.Builder.toggleDescriptionInput();" %><br/>
  <div id='description' style='display:none'>
    <%= f.label '投票描述' %>
    <%= f.text_area 'description', :rows => 7 %>
  </div>
  <div id='poll_answers'>
  <% 1.upto(10) do %>
    <%= render :partial => 'answer_input', :object => PollAnswer.new %>
  <% end %>
  </div>
  <%= link_to_function '添加选项' do |page|
        page.insert_html :bottom, :poll_answers, :partial => 'answer_input', :object => PollAnswer.new
      end %><br/>
  <%= link_to_function '增加选项说明', "Iyxzone.Poll.Builder.toggleExplanation();" %><br/>
  <div id='explanation' style="display:none">
    <%= f.label '选项说明' %>
    <%= f.text_area 'explanation', :rows => 7 %>
  </div>
  <%= f.label '截至时间: ' %>
  <%= calendar_date_select :poll, :end_date %><br/> 
  <%= f.label '可投选项: '%>
  <%= max_multiple_select_tag %><br/>
  <%= f.label '投票限制: '%>
  <%= poll_privilege_select_tag :poll %><br/>
  <%= f.label '游戏类别: '%>
  <%= f.collection_select 'game_id', @user.games, :id, :name, {:prompt => '---'} %><br/>
  <%= button_to_function '投票', "Iyxzone.Poll.Builder.save();", :class => 'confirm-button' %>
<% end %>
