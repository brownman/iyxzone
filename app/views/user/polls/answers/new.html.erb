<% facebox_tag '增加选项' do %>
  <% rows_form_remote_tag :url => poll_answers_url(@poll), :html=> {:onsubmit=> "Iyxzone.disableButton($(new_poll_answer_btn),'请等待..');"}do %>
    <div class='formcontent'>
      <div class='content'>
        <div id='poll_answers'>
          <%= render :partial => 'answer_input', :object => PollAnswer.new %>
        </div>
        <div class='rows s_clear'>
          <div class='fldid'><label>
            <%= link_to_function '添加选项' do |page|
                page.insert_html :bottom, :poll_answers, :partial => 'answer_input', :object => PollAnswer.new
              end %></label>
          </div>
        </div>
      </div>
    </div>
    <%= f.z_submit :submit => {:text => '完成', :id => 'new_poll_answer_btn'}, :cancel => {:text => '取消', :onclick => 'facebox.close();'} %>
  <% end %>
<% end %>
