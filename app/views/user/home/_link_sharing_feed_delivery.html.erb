<% delivery = link_sharing_feed_delivery %>
<% item = delivery.feed_item %>
<% link = item.originator %>
<div class="feed-list-box">
<div class="feed-list" id='feed_delivery_<%= delivery.id %>'>
	<div class="s-img left">
		<div class="imgbox01"><%= avatar link.poster, :size => "small" %></div>
	</div>
	<div class="jl-list-con jl-cutline">
  <%= profile_link link.poster %>分享了连接<%= link_to link.url, :class => "shine" %>
	<% if delivery.is_deleteable_by? current_user %><%= link_to_remote "", :url => feed_delivery_url(delivery), :method => :delete, :class => "icon-active" %><% end %> 
	<p class="gray"><%= ftime delivery.created_at %> <%= link_to_function "回复", "Iyxzone.Comment.showForm('link', #{character.id}, null);", :class => "gray"%></p>
  <% if with_comments %>
	  <%= render :partial => "user/comments/folded_comment_box", :locals => {:commentable => link , :recipient => link.poster} %>
  <% end %>
	</div>
</div>
</div>
