<% content_for :html_title, "#{current_user.login} - 首页 - 17Gaming.com" %>
<% content_for :html_description, "#{current_user.login} - 17Gaming.com (一起游戏网)愿做网络游戏玩家的精神家园。" %>
<% content_for :html_keywords, "#{current_user.login}, 17Gaming, 一起游戏, 一起游戏网, 网络游戏玩家, 游戏社区, 社交网站, 网络游戏社区" %>

<% content_for :javascript_include do %>
  <%= javascript_include_merged 'home' %>
  <%= javascript_include_tag 'sound' %>
<% end %>

<div id="canvas" class="round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
	<div class="round_m"><div class="round_body canvas_wrap s_clear">
		<div class="canvas_m">
			<div class="canvas_c">
				<div class="box02 canvas_con">
					<div id="homeComposer">
						<div class="img">
							<div class="mcAvatar jl-mcAvatar">
								<a href="#"></a>
                <div class="picwrap">
										<%= avatar current_user, :class => "imgbox01" %>
                </div>
              </div>
            </div>
            <div class="mcContent">
							<div class="mcPanel round02 round_r_t"><div class="round_l_t"><div class="round_r_b"><div class="round_l_b">
								<div class="round_m jl-round_m"><span class="arrow-dialog"></span><div class="round_body s_clear">
									<% form_remote_for :status, :html => {:onsubmit => "Iyxzone.Status.Builder.save($('status_submit_btn'), this); return false;", :class => "formcontent s_clear"} do |f| %>
                  <%= hidden_field_tag 'home', 1 %>
                  <div class="fldvalue">
										<div id="mcStatus" class="textfield02"><%= f.text_area :content %></div>
                    <%= javascript_tag "new Iyxzone.limitedTextField($('status_content'), 140, null, true);" %>
                  </div>
                  <div class="fldbtn jl-fldbtn">
										<span class="button03"><span><button type='submit' id='status_submit_btn'>发布</button></span></span>
                  </div>
                  <% end %>
									<div class='buttons home-dialog'>
                  <span class='left' id='latest_status'>
										<% unless current_user.latest_status.nil? %>
											<%= time_ago_in_chinese current_user.latest_status.created_at %> : <%= current_user.latest_status.content %>
										<% end %>
									</span>
										<span class="right"><%= emotion_link 'status_content', :class => 'icon-face' %></span>
                  </div>
                </div></div>
              </div></div></div></div>
            </div>
          </div>
          <div class="feed-message-box s_clear" id='my_notices'>
						<%= render :partial => 'user/notices/notices', :object => @notices %>
          </div>
					<div class="feed-box rows">
						<div class="tab tab01">
							<ul id='feed_menu'>
								<li class='hover'><span><%= link_to_function "新鲜事", "Iyxzone.Home.Feeder.showFeeds();" %></span></li>
								<li><span><%= link_to_function "状态", "Iyxzone.Home.Feeder.showFeeds(0);" %></span></li>
								<li><span><%= link_to_function "日志", "Iyxzone.Home.Feeder.showFeeds(1);" %></span></li>
								<li><span><%= link_to_function "照片", "Iyxzone.Home.Feeder.showFeeds(2);" %></span></li>
								<li><span><%= link_to_function "视频", "Iyxzone.Home.Feeder.showFeeds(3);" %></span></li>
								<li><span><%= link_to_function "分享", "Iyxzone.Home.Feeder.showFeeds(4);" %></span></li>
              </ul>
            </div>
            <div class="feed-wrap">
							<% if currrent_user.last_seen_at.nil? %>
								欢迎您第一次来到一起游戏网<br/><br/>

								在这里没有学习生活，没有工作体会，只有玩家在游戏中的点点滴滴。希望我们享受游戏，享受生活，一起开心，快乐。<br/><br/>

								以下是我们的第一个宣传篇: 10年网游，让我们在一起，希望您喜欢<br/><br/>
								<% unless @friend_suggestions.empty? %>
									您可能已经加了一些好友，我们觉得以下用户可能是您的好友或者很可能跟您成为朋友
                  <div class="feed-avatar-list">
                    <div class="friend-invite-list">
											<ul>
												<li class="bg">
													<a href="#">
															<img class="imgbox01" src="images/photo/photo11.png" alt="" />
															<strong>刘某刘某刘某刘某刘某刘某<span class="red">游戏角色名游戏角色名</span></strong>
															</a>
												</li>
											</ul>
										</div>
									</div>
								<% else %>
									现在确实很难为您推荐好友，很可能是我们没发现与您玩一个游戏的玩家，这都怪我们的用户还不够多。也许您可以帮我们<%= link_to "邀请", signup_invitations_url %>您的好友来我们网站。多谢了。
								<% end %>
							<% else %>
								<div id="feed_list">
									<%= render :partial => 'feed_deliveries', :object => @feed_deliveries %>
								</div>
							<% end %>
							<div class="s_clear"></div>
								<div class="round04 round_r_t jl-read-more space s_clear">
                  <div class="round_l_t">
                    <div class="round_r_b">
                      <div class="round_l_b">
                        <div class="round_m">
                          <div class="round_body" id="more_feed">
													<% if @feed_deliveries.size < @first_fetch_size %>
														<div class='jl-more'>没有更多了...</div>
													<% else %>
														<%= link_to_function "更多新鲜事", "Iyxzone.Home.Feeder.moreFeeds();", :class => "jl-more"%>
													<% end %>
                          </div>
												</div>
                      </div>
                    </div>
                  </div>
                </div>
						</div>
							<!-- feedwrap end-->
            </div>
          </div>
				</div>
			</div>
    <div id="rightsidebar" class="canvas_r">
			<% if current_user.requests_count != 0 or current_user.invitations_count != 0 or current_user.poke_deliveries_count != 0 %>	
			<div class="multibox">
				<div class="title">
					<b>请求</b>
        </div>
        <div class="request menu-icon-list01">
					<ul>
						<% if current_user.requests_count != 0 %>
							<li class="icon-add"><span><%= link_to "#{current_user.requests_count}个请求", requests_url %></span></li>
						<% end %>
						<% if current_user.invitations_count != 0 %>
							<li class='icon-add'><span><%= link_to "#{current_user.invitations_count}个邀请", invitations_url %></span></li>
            <% end %>
						<% if current_user.poke_deliveries_count != 0 %>
							<li class='icon-invite'><%= link_to "<span>#{current_user.poke_deliveries.count}个招呼</span>", pokes_url %></li>
						<% end %>
					</ul>
        </div>
      </div>
			<% end %>
      <% if current_user.profile.viewings_count != 0 %> 
      <div class="multibox">
				<div class="title">
          <%= facebox_link "更多", profile_viewings_url(current_user.profile) %>
					<b>最近来访</b>
        </div>
        <div class="photolist-box">
					<ul class="collection s_clear">
						<% current_user.profile.viewings.each do |r| %>
              <li>
								<div class="middle"><div class="middle-center"><div class="center"><%= avatar r.viewer, :class => 'imgbox01' %></div></div></div>
								<p><%= profile_link r.viewer %></p>
              </li>
						<% end %>
          </ul>
        </div>
      </div>
      <% end %>
      <div class="multibox">
				<div class="title">
					<%= link_to "更多", friend_suggestions_url %>
					<b>你可能认识</b>
        </div>
        <div class="photolist-box">
					<ul class="collection s_clear" id='friend_suggestions'>
						<%= render :partial => 'user/friend_suggestions/friend_suggestion', :collection => @friend_suggestions[0..2] %>
          </ul>
        </div>
      </div>
    </div>
	</div></div>
</div></div></div></div>

<%= javascript_tag "
	Iyxzone.Home.NoticeManager.fetch('#{first_ten_notices_url}');
"%>
