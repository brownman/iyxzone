<% delivery = album_sharing_feed_delivery %>
<% sharing = delivery.feed_item.originator %>
<% album = sharing.shareable %>

<% render :layout => 'feed_delivery', :locals => {:delivery => delivery, :poster => sharing.poster} do %>
		  <%= profile_link sharing.poster %> 分享了相册 <%= album_link album, :class => "shine" %>
	    <p class="grayi jl-con"></p>
      <p class='con space'><span class='share-album-cover'><%= album_cover album, :class => 'imgbox01', :width => 75, :height => 75, :size => 'large' %></span></p>
      <p class='gray'><%= ftime delivery.created_at %> <%= link_to_function "回复", "Iyxzone.Comment.showForm('sharing', #{sharing.id}, null, #{sharing.poster_id});", :class => "gray"%></p>
	    <%= render :partial => "user/comments/folded_comment_box", :locals => {:commentable => sharing, :recipient => sharing.poster} %>
<% end %>
