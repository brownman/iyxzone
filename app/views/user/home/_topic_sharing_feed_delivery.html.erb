<% delivery = topic_sharing_feed_delivery %>
<% sharing = delivery.feed_item.originator %>
<% topic = sharing.shareable %>
<div class='feed-list-box'>
  <div class="feed-list" id='feed_delivery_<%= delivery.id %>'>
    <div class="img left"><div class="imgbox01"><%= avatar sharing.poster %></div></div>
    <% if delivery.is_deleteable_by? current_user %>
      <%= link_to_remote '', :url => feed_delivery_url(delivery), :method => :delete, :html => {:class => 'icon-active'} %>
    <% end %>
    <div class="jl-list-con jl-cutline">
      <%= profile_link sharing.poster %> 分享了公会 <%= link_to topic.forum.guild.name, forum_topic_posts_url(topic.forum, topic), :class => 'shine' %> 的话题
      <p class='gray jl-con'><%= truncate topic.subject, :length => 80, :omission => '...' %></p>
      <p class='gray'><%= ftime delivery.created_at %> <%= link_to_function '评论', "Iyxzone.Comment.showForm('sharing', #{sharing.id}, null, #{sharing.poster_id})" %></p>
      <%= render :partial => 'user/comments/folded_comment_box', :locals => {:commentable => sharing, :recipient => sharing.poster} %>
    </div>
  </div>
</div>

