<% delivery = video_sharing_feed_delivery %>
<% sharing = delivery.feed_item.originator %>
<% video = sharing.shareable %>

<% render :layout => 'feed_delivery', :locals => {:delivery => delivery, :poster => sharing.poster} do %>
  <%= profile_link sharing.poster %> 分享了 <%= profile_link video.poster %> 的视频 <%= video_link video, :class => "shine"%>
  <p class="gray jl-con s_clear" id='video_<%= video.id %>'> <%= video_thumbnail video, :class=>'imgbox01' %></p>
	<p class="gray"><%= ftime video.created_at %> <%= link_to_function "评论", "Iyxzone.Comment.showForm('sharing', #{sharing.id}, null, #{sharing.poster_id})", :class => "gray" %></p>
	<%= render :partial => 'user/comments/folded_comment_box', :locals => {:commentable => sharing, :recipient => sharing.poster} %>
<% end %>
