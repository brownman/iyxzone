<% guild = guild_invitation.guild %>
<% invitation = guild_invitation %>
<% president = guild.president %>
<div class="request-box" id='guild_invitation_<%= invitation.id %>'>
  <h4><span> <%= ftime invitation.created_at %> </span>公会</h4>
  <div class="request-list s_clear">
    <div class="img"><%= avatar president %> </div>
    <div class="info" id='gi_<%= invitation.id %>'>
      <p> <%= profile_link president %> 邀请你加入他的公会 <%= guild_link guild %>, 是否同意？</p>
      <div class="buttons">
        <span class="button"><span><%= button_to_function '接受', "Iyxzone.Guild.Invitation.accept1(#{invitation.id}, #{guild.id});", :id => "gi_btn1_#{invitation.id}" %></span></span>
        <span class="button button-gray"><span><%= button_to_function '拒绝', "Iyxzone.Guild.Invitation.decline1(#{invitation.id}, #{guild.id});", :id => "gi_btn2_#{invitation.id}" %></span></span>
      </div>
    </div>
  </div>
</div>
