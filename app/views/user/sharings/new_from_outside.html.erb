<html>
<head>
<%= stylesheet_link_tag 'home' %>
<%= stylesheet_link_tag 'common' %>
<%= javascript_include_tag :defaults %>
</head>
<body>
        <% form_remote_for :sharing, :url => sharings_url(:outside => 1) do |f| %>
          <% if params[:link] %>
            <%= hidden_field_tag 'sharing[link]', params[:link] %>
          <% end %>
          <div class='formcontent'>
            <div class="rows s_clear">
              <div class="fldid"><label for="name">分享标题：</label></div>
              <div class="fldvalue">
                <div class="textfield"><%= text_field_tag 'sharing[title]', @title %></div>
              </div>
            </div>
            <div class="rows s_clear">
              <div class="fldid"><label for="des">分享理由：</label></div>
              <div class="fldvalue">
                <%= f.text_area 'reason', :rows => 4 %>
              </div>
            </div>
          </div>
          <div class="z-submit s_clear space">
            <table class="center" cellpadding="0"><tr><td>
              <span class="button"><span><button type="submit">完成</button></span></span>
              <span class="button button-gray"><span><button type="button" onclick="window.close();">取消</button></span></span>
            </td></tr></table>
          </div>
        <% end %>
</body>
</html>
