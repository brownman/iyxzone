<% profile = profile_sharing.shareable %>
<div class="share-side-list">
  <%= dig_link profile_sharing %>
  <div class="box02 share-content s_clear">
    <div class="right">
      <p><%= ftime profile_sharing.created_at %></p>
      <p>首次分享人：<%= avatar profile.first_sharer, :width => '27px', :height => '27px' %> <%= profile_link profile.first_sharer %></p>
    </div>
    <div>
      <h3>玩家 "<%= profile_link profile.user %>" </h3>
      <p class="green"><%= link_to_function "评论", "Iyxzone.Comment.toggleBox('sharing', #{profile_sharing.id})" %>(<%= profile_sharing.comments_count %>)-<%= facebox_link "我也分享", new_sharing_url(:shareable_type => 'Profile', :shareable_id => profile.id) %><span>(<%= profile.sharings_count %>)</span></a> -<%= link_to "更多分享", sharings_url(:id => profile.first_sharer.id) %></p>
    </div>
    <div id ="sharing_comment_box_<%= profile_sharing.id %>" style="display:none">
      <%= render :partial => 'user/comments/comment_box', :locals => {:commentable => profile_sharing, :recipient => nil} %>
    </div>
  </div>
</div>
