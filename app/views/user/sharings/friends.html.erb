              <li class="hover"><%= link_to "<span>连接</span>", friends_sharings_url(:id => current_user.id, :type => 3) %></li>
            <% else %>
              <li><%= link_to "<span>连接</span>", friends_sharings_url(:id => current_user.id, :type => 3) %></li>
