            <% else %>
              <li><%= link_to "<span>全部</span>", friends_sharings_url(:id => current_user.id, :type => 0) %></li>
            <% end %>
            <% if params[:type].to_i == 1 %>
              <li class="hover"><%= link_to "<span>博客</span>", friends_sharings_url(:id => current_user.id, :type => 1) %></li>
            <% else %>
              <li><%= link_to "<span>博客</span>", friends_sharings_url(:id => current_user.id, :type => 1) %></li>
            <% end %>
