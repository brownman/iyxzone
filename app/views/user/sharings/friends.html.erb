            <% if params[:type].to_i == 5 %>
              <li class="hover"><%= link_to "<span>视频</span>", friends_sharings_url(:id => current_user.id, :type => 5) %></li>
            <% else %>
              <li><%= link_to "<span>相册</span>", friends_sharings_url(:id => current_user.id, :type => 5) %></li>
            <% end %>
          </ul>
        </div>
        <% @sharings.each do |sharing| %>
          <%= render :partial => "#{sharing.shareable_type.underscore}_sharing", :object => sharing %>
        <% end %>
