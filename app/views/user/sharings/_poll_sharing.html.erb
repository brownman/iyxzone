<% poll = poll_sharing.shareable %>
<div class="share-side-list">
  <%= dig_link poll_sharing %>
  <div class="box02 share-content s_clear">
    <div class="right">
      <p><%= ftime poll_sharing.created_at %></p>
      <p>首次分享人：<%= avatar poll.first_sharer, :width => '27px', :height => '27px' %> <%= profile_link poll.first_sharer %></p>
    </div>
    <div>
      <h3><%= poll_link poll %></h3>
      <p class="green"><%= link_to_function "评论", "Iyxzone.Comment.toggleBox('sharing', #{poll_sharing.id})" %>(<%= poll_sharing.comments_count %>)-<%= facebox_link "我也分享", new_sharing_url(:shareable_type => 'Poll', :shareable_id => poll.id) %><span>(<%= poll.sharings_count %>)</span></a> -<%= link_to "更多分享", sharings_url(:id => poll.first_sharer.id) %></p>
    </div>
    <div id ="sharing_comment_box_<%= poll_sharing.id %>" style="display:none">
      <%= render :partial => 'user/comments/comment_box', :locals => {:commentable => poll_sharing, :recipient => nil} %>
    </div>
  </div>
</div>
