        <div class="path-box">
          <p class="left"><label>
            <% if user == current_user %>
              <%= link_to "我的相册", personal_albums_url(:uid => current_user.id) %>
            <% else %>
              <%= user.login %>的相册
            <% end %>
          </label>
          <span><%= album_link album %></span><span>照片</span></p>
          <% if user == current_user %>
            <%= link_to '更新头像', new_avatar_url, :class => 'right' %>
          <% else %>
            <%= facebox_link '分享', new_sharing_url(:url => avatar_album_url(album)), :width => 450, :class => 'right love-btn' %>
          <% end %>
        </div>

