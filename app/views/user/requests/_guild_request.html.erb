<% request = guild_request %>
<% guild = request.guild %>
<% user = request.user %>
<div class="request-box" id='gr_<%= request.id %>'>
  <h4><span> <%= ftime request.created_at %> </span>好友</h4>
  <div class="request-list s_clear">
    <div class="img"><%= avatar user %> </div>
    <div class="info" id='gr_<%= request.id %>_info'>
      <p> <%= profile_link user %> 请求加入你的公会 <%= guild_link guild %>, 是否同意？</p>
      <div class="buttons">
        <span class="button"><span><%= button_to_function '同意', "Iyxzone.Guild.Request.accept(#{guild.id}, #{request.id});", :id => "gr_btn1_#{request.id}" %></span></span>
        <span class="button button-gray"><span><%= button_to_function '拒绝', "Iyxzone.Guild.Request.decline(#{guild.id}, #{request.id});", :id => "gr_btn2_#{request.id}" %></span></span>
      </div>
    </div>
  </div>
</div>
