<% request = guild_request %>
<div class="request-box" id='guild_request_<%= request.id %>'>
  <h4><span> <%= ftime request.created_at %> </span>好友</h4>
  <div class="request-list s_clear">
    <div class="img"><%= avatar request.user %> </div>
    <div class="info">
      <p> <%= profile_link request.user %> 请求加入你的工会 <%= guild_link request.guild %>, 是否同意？</p>
      <div class="buttons" id='guild_request_option_<%= request.id %>'>
        <span class="button"><span><%= button_to_remote '同意', :url => accept_guild_request_url(request.guild, request, :at => 'requests'), :method => :put, :loading => "Iyxzone.disableButton($('guild_request_#{request.id}').down('button',0),'请等待..'); Iyxzone.changeCursor('wait');", :complete => "Iyxzone.changeCursor('default')" %></span></span>
        <span class="button button-gray"><span><%= facebox_confirm '<button>拒绝</button>', decline_guild_request_url(request.guild, request, :at => 'requests'), {:msg => '你确定要拒绝吗?', :method => :delete} %></span></span>
      </div>
    </div>
  </div>
</div>
