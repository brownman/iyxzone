<div class="feed-img-list" id='comment_<%= wall_message.id %>'>
  <div class="feed-list">
  <div class="feed-img"><%= avatar wall_message.poster %></div>
    <p>
      <%= profile_link wall_message.poster %> 
      <%= ftime wall_message.created_at %> 
      <%= link_to_function '回复', "$('comment_content').value = '回复#{wall_message.poster.login}：'; $('comment_content').focus(); " %>
    </p>
    <p><%= wall_message.content  %></p>
  </div>
  <div class='option'>
    <%= yield %>
  </div>
</div>

