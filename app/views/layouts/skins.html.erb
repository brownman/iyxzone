<% content_for :skintop do %>
<div class="theme-head">
  <div class="wrap">
		<%= link_to "装扮中心", skins_url, :class => "theme-center" %>
    <div class="theme-preview s_clear">
			<% if @skin.prev -%>
				<%= link_to "", skin_url(@skin.prev), :class => "btn roll-l" -%>
			<% else -%>
				<%= link_to "", "#", :class => "btn roll-l-gray" -%>
			<% end -%>
    	<ul>
        <li>
					<% if @skin.prev -%>
            <%= skin_image_tag @skin.prev, :size=>"190x96" -%>
					<% end -%>
				</li>
        <li class="focus">
          <%= skin_image_tag @skin, :size=>"190x96", :class=>"left w-l" -%>
          <div class="op">
            <strong>当前预览</strong><br /><span>装扮名称：<%= @skin.name -%></span>
            <p class="space">
							<% form_for(@skin) do |f| %>
								<span class="button w-l"><span><button name="act" type="submit" value ="apply">应用</button> </span></span>
								<span class="button button-gray"><span><button onclick= <%= "'location.href=#{profile_url(current_user.profile)}'"-%> type="submit">取消</button> </span></span>
						  <% end %>
            </p>
          </div>
        </li>
        <li>
					<% if @skin.next -%>
            <%= skin_image_tag @skin.next, :size=>"190x96" %>
					<% end -%>
				</li>
      </ul>
			<% if @skin.next -%>
				<%= link_to "", skin_url(@skin.next), :class => "btn roll-r" -%>
			<% else -%>
				<%= link_to "#", :class => "btn roll-r-gray" -%>
			<% end -%>
    </div>
  </div>
</div>
<% end -%>

<% content_for :themebodyup do %>
<div class="theme-body">  
<% end%>

<% content_for :themebodydown do %>
</div> <!-- end of theme-body -->
<% end%>

<%= render :file => 'layouts/app2' %>
